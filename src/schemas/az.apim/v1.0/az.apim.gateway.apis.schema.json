{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "apimGatewayApis": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "apimName": {
                                "type": "string"
                            },
                            "apimResourceGroupName": {
                                "type": "string"
                            },
                            "apimApiName": {
                                "type": "string"
                            },
                            "apimApiPath": {
                                "type": "string"
                            },
                            "apimApiDescription": {
                                "type": "string"
                            },
                            "apimApiSubscriptionRequired":{
                                "type": "boolean"
                            },
                            "apimApiProtocols": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "oneOf": [
                                        {
                                            "const": "https"
                                        }
                                    ]
                                }
                            },
                            "apimApiPolicies": {
                                "type": "string"
                            },
                            "apimApiOperations": {
                                "type": "array",
                                "items": {
                                    "$ref": "az.apim.gateway.apis.operation.schema.json#definitions/apimGatewayApiOperations"
                                }
                            }
                        },
                        "required": [
                            "apimName",
                            "apimResourceGroupName",
                            "apimApiName",
                            "apimApiPath",
                            "apimApiDescription",
                            "apimApiSubscriptionRequired",
                            "apimApiProtocols",
                            "apimApiOperations"
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        }
    }
}
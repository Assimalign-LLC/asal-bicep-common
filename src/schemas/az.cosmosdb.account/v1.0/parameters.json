                                        "$ref": "#/definitions/cosmos-accounts-graph-database-parameters"
                                    },
                                    "minItems": 1
                                }
                            }
                        }
                    ]
                }
            ]
        },
        "cosmos-accounts": {
            "$schema": "http://json-schema.org/draft-07/schema",
            "type": "object",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "type": "object",
                                "allOf": [
                                    {
                                        "$ref": "#/definitions/cosmos-account-parameters"
                                    },
                                    {
                                        "properties": {
                                            "cosmosAccountType": {
                                                "const": "EnableDocument"
                                            },
                                            "cosmosAccountDatabases": {
                                                "type": "array",
                                                "items": {
                                                    "$ref": "#/definitions/cosmos-accounts-document-database-parameters"
                                                },
                                                "minItems": 1
                                            }
                                        }
                                    }
                                ]
                            },
                            {
                                "type": "object",
                                "allOf": [
                                    {
                                        "$ref": "#/definitions/cosmos-account-parameters"
                                    },
                                    {
                                        "properties": {
                                            "cosmosAccountType": {
                                                "const": "EnableGremlin"
                                            },
                                            "cosmosAccountDatabases": {
                                                "type": "array",

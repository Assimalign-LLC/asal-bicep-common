{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "cosmos-account": {
            "type": "object",
            "properties": {
                "value": {
                    "oneOf": [
                        {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/cosmos-account-parameters"
                                },
                                {
                                    "properties": {
                                        "cosmosAccountType": {
                                            "const": "EnableDocument"
                                        },
                                        "cosmosAccountDatabases": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/definitions/cosmos-accounts-document-database-parameters"
                                            },
                                            "minItems": 1
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/cosmos-account-parameters"
                                },
                                {
                                    "properties": {
                                        "cosmosAccountType": {
                                            "const": "EnableGremlin"
                                        },
                                        "cosmosAccountDatabases": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/definitions/cosmos-accounts-graph-database-parameters"
                                            },
                                            "minItems": 1
                                        }
                                    }
                                }
                            ]
                        }
                    ]
                }
            },
            "required": [
                "value"
            ]
        },
        "cosmos-accounts": {
            "$schema": "http://json-schema.org/draft-07/schema",
            "type": "object",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "type": "object",
                                "allOf": [
                                    {
                                        "$ref": "#/definitions/cosmos-account-parameters"
                                    },
                                    {
                                        "properties": {
                                            "cosmosAccountType": {
                                                "const": "EnableDocument"
                                            },
                                            "cosmosAccountDatabases": {
                                                "type": "array",
                                                "items": {
                                                    "$ref": "#/definitions/cosmos-accounts-document-database-parameters"
                                                },
                                                "minItems": 1
                                            }
                                        }
                                    }
                                ]
                            },
                            {
                                "type": "object",
                                "allOf": [
                                    {
                                        "$ref": "#/definitions/cosmos-account-parameters"
                                    },
                                    {
                                        "properties": {
                                            "cosmosAccountType": {
                                                "const": "EnableGremlin"
                                            },
                                            "cosmosAccountDatabases": {
                                                "type": "array",
                                                "items": {
                                                    "$ref": "#/definitions/cosmos-accounts-graph-database-parameters"
                                                },
                                                "minItems": 1
                                            }
                                        }
                                    }
                                ]
                            }
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "cosmos-account-parameters": {
            "type": "object",
            "properties": {
                "cosmosAccountName": {
                    "type": "string",
                    "description": "The name of the Database Account/Server"
                },
                "cosmosAccountResourceGroup": {
                    "type": "string",
                    "description": "The name of the resource group in which to deploy the Cosmos Database Account to."
                },
                "cosmosAccountType": {
                    "type": "string",
                    "enum": [
                        "EnableDocument",
                        "EnableTable",
                        "EnableGremlin"
                    ],
                    "default": "EnableDocument"
                },
                "cosmosAccountEnableMsi": {
                    "type": "boolean",
                    "default": false
                },
                "cosmosAccountEnableMultiRegionWrites": {
                    "type": "boolean",
                    "default": false
                },
                "cosmosAccountEnableFreeTier": {
                    "type": "boolean",
                    "default": false
                },
                "cosmosAccountLocations": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "locationName": {
                                "type": "string",
                                "enum": [
                                    "East US",
                                    "South Central US",
                                    "Central US",
                                    "West US",
                                    "West US 3",
                                    "Australia East",
                                    "North Europe",
                                    "Sweden Central",
                                    "UK South",
                                    "East Asia",
                                    "Japan East",
                                    "Canada Central",
                                    "France Central",
                                    "Norway East",
                                    "North Central US",
                                    "West Central US",
                                    "Australia Central",
                                    "Canada East",
                                    "UK West"
                                ]
                            },
                            "failoverPriority": {
                                "type": "number",
                                "default": 0
                            },
                            "isZoneRedundant":{
                                "type":"boolean"
                            }
                        },
                        "required": [
                            "locationName",
                            "failoverPriority"
                        ]
                    },
                    "minItems": 1
                },
                "cosmosAccountConsistencyPolicy": {
                    "type": "object",
                    "properties": {
                        "consistencyMaxInterval": {
                            "type": "number"
                        },
                        "consistencyMaxStalenessPrefix": {
                            "type": "number"
                        },
                        "consistencyLevel": {
                            "type": "string",
                            "oneOf": [
                                {
                                    "const": "BoundedStaleness"
                                },
                                {
                                    "const": "ConsistentPrefix"
                                },
                                {
                                    "const": "Eventual",
                                    "description": "Eventual consistency is the weakest form of consistency wherein a client may get the values which are older than the ones it had seen before, over time."
                                },
                                {
                                    "const": "Strong",
                                    "description": "Strong consistency provides the most predictable and intuitive programming model. When you configure your account with strong consistency level, Azure Cosmos DB provides linearizability guarantee."
                                },
                                {
                                    "const": "Session",
                                    "description": "Session consistency is most widely used consistency level both for single region as well as, globally distributed applications."
                                }
                            ]
                        }
                    },
                    "if": {
                        "enum": [
                            null
                        ]
                    },
                    "then": {},
                    "else": {
                        "required": [
                            "consistencyLevel"
                        ]
                    }
                },
                "cosmosAccountCorsPolicy": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "allowedOrigins": {
                                "type": "string"
                            },
                            "allowedMethods": {
                                "type": "string"
                            },
                            "allowedHeaders": {
                                "type": "string"
                            }
                        },
                        "minProperties": 1
                    }
                },
                "cosmosAccountTags": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-z]": {
                            "type": "string"
                        }
                    },
                    "minProperties": 1
                },
                "cosmosAccountPrivateEndpoint": {
                    "$ref": "../../az.private.endpoint/v1.0/parameters.json#/definitions/private-endpoint-embedded"
                },
                "cosmosAccountVirtualNetworks": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "virtualNetworkName": {
                                "type": "string"
                            },
                            "virtualNetworkSubnetName": {
                                "type": "string"
                            },
                            "virtualNetworkResourceGroup": {
                                "type": "string"
                            },
                            "VirtualNetworkMissingServiceEndpointIgnore": {
                                "type": "boolean"
                            }
                        },
                        "required": [
                            "virtualNetworkName",
                            "virtualNetworkSubnetName",
                            "virtualNetworkResourceGroup"
                        ]
                    },
                    "minItems": 1
                },
                "cosmosAccountBackupPolicy": {
                    "oneOf": [
                        {
                            "type": "object",
                            "properties": {
                                "policyType": {
                                    "const": "Continuous"
                                },
                                "policyBackupStartTime": {
                                    "type": "string"
                                },
                                "policyBackupTargetType": {
                                    "enum": [
                                        "Continuous",
                                        "Periodic"
                                    ]
                                }
                            },
                            "required": [
                                "policyType",
                                "policyBackupStartTime",
                                "policyBackupTargetType"
                            ]
                        },
                        {
                            "type": "object",
                            "properties": {
                                "policyType": {
                                    "const": "Periodic"
                                },
                                "policyBackupInternal": {
                                    "description": "The backup interval should be in minutes",
                                    "type": "number"
                                },
                                "policyBackupRetentionInterval": {
                                    "description": "The backup retention interval should be in hours",
                                    "type": "number"
                                },
                                "policyBackupStorageRedundancy": {
                                    "enum": [
                                        "Geo",
                                        "Local",
                                        "Zone"
                                    ]
                                }
                            },
                            "required": [
                                "policyType",
                                "policyBackupInternal",
                                "policyBackupRetentionInterval",
                                "policyBackupStorageRedundancy"
                            ]
                        }
                    ]
                },
                "cosmosAccountConfigs": {
                    "type": "object",
                    "properties": {
                        "disableLocalAuth": {
                            "type": "boolean"
                        },
                        "disablePublicNetworkAccess": {
                            "type": "boolean"
                        },
                        "enableVirtualNetworkFiltering": {
                            "type": "boolean"
                        }
                    },
                    "minProperties": 1
                }
            },
            "required": [
                "cosmosAccountName",
                "cosmosAccountLocations"
            ]
        },
        "cosmos-accounts-document-databases": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "array",
                    "description": "A list of databases to deploy with the Document DB Account. NOTE: Tables CANNOT be included it deploying Documents",
                    "items": {
                        "type": "object",
                        "allOf": [
                            {
                                "$ref": "#/definitions/cosmos-accounts-document-database-parameters"
                            },
                            {
                                "type": "object",
                                "properties": {
                                    "cosmosAccountName": {
                                        "type": "string",
                                        "description": "The name of the database account in which the database lives in."
                                    },
                                    "cosmosAccountResourceGroup": {
                                        "type": "string",
                                        "description": "The name of the resource group the Database Account belongs to."
                                    }
                                },
                                "required": [
                                    "cosmosAccountName"
                                ]
                            }
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "cosmos-accounts-document-database": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/cosmos-accounts-document-database-parameters"
                        },
                        {
                            "type": "object",
                            "properties": {
                                "cosmosAccountName": {
                                    "type": "string",
                                    "description": "The name of the database account in which the database lives in."
                                },
                                "cosmosAccountResourceGroup": {
                                    "type": "string",
                                    "description": "The name of the resource group the Database Account belongs to."
                                }
                            },
                            "required": [
                                "cosmosAccountName"
                            ]
                        }
                    ]
                }
            },
            "required": [
                "value"
            ]
        },
        "cosmos-accounts-document-database-parameters": {
            "type": "object",
            "properties": {
                "cosmosAccountDatabaseName": {
                    "type": "string",
                    "description": "The name of the Database."
                },
                "cosmosAccountDatabaseContainers": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/cosmos-accounts-document-database-container-parameters"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "cosmosAccountDatabaseName"
            ]
        },
        "cosmos-accounts-document-database-container": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/cosmos-accounts-document-database-container-parameters"
                        },
                        {
                            "type": "object",
                            "properties": {
                                "cosmosAccountDatabaseName": {
                                    "type": "string"
                                },
                                "cosmosAccountName": {
                                    "type": "string"
                                },
                                "cosmosAccountResourceGroup": {
                                    "type": "string",
                                    "description": "The name of the Azure Resource Group the Database Account belongs to."
                                }
                            },
                            "required": [
                                "cosmosAccountDatabaseName",
                                "cosmosAccountName"
                            ]
                        }
                    ]
                }
            },
            "required": [
                "value"
            ]
        },
        "cosmos-accounts-document-database-containers": {
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "allOf": [
                            {
                                "$ref": "#/definitions/cosmos-accounts-document-database-container-parameters"
                            },
                            {
                                "type": "object",
                                "properties": {
                                    "cosmosAccountDatabaseName": {
                                        "type": "string"
                                    },
                                    "cosmosAccountName": {
                                        "type": "string"
                                    },
                                    "cosmosAccountResourceGroup": {
                                        "type": "string",
                                        "description": "The name of the Azure Resource Group the Database Account belongs to."
                                    }
                                },
                                "required": [
                                    "cosmosAccountDatabaseName",
                                    "cosmosAccountName"
                                ]
                            }
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "cosmos-accounts-document-database-container-parameters": {
            "type": "object",
            "properties": {
                "cosmosAccountDatabaseContainerName": {
                    "type": "string"
                },
                "cosmosAccountDatabaseContainerPartitionKey": {
                    "type": "object",
                    "properties": {
                        "kind": {
                            "type": "string",
                            "enum": [
                                "Hash",
                                "MultiHash",
                                "Range"
                            ]
                        },
                        "paths": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "pattern": "^/"
                            }
                        }
                    },
                    "required": [
                        "kind",
                        "paths"
                    ]
                },
                "cosmosAccountDatabaseContainerUniqueKeyPolicy": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "paths": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "string",
                                    "pattern": "^/"
                                }
                            }
                        },
                        "required": [
                            "paths"
                        ]
                    }
                },
                "cosmosAccountDatabaseContainerIndexingPolicy": {
                    "properties": {
                        "indexingMode": {
                            "type": "string",
                            "default": "consistent",
                            "enum": [
                                "none",
                                "consistent",
                                "lazy"
                            ]
                        },
                        "includePaths": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "path": {
                                        "type": "string"
                                    }
                                }
                            },
                            "default": [
                                {
                                    "path": "/*"
                                }
                            ]
                        },
                        "excludePaths": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "properties": {
                                    "path": {
                                        "type": "string"
                                    }
                                }
                            },
                            "default": [
                                {
                                    "path": "/\"_etag\"/?"
                                }
                            ]
                        },
                        "compositeIndexes": {
                            "type": "array",
                            "items": {
                                "type": "array",
                                "minItems": 2,
                                "items": {
                                    "properties": {
                                        "path": {
                                            "type": "string"
                                        },
                                        "order": {
                                            "type": "string",
                                            "enum": [
                                                "ascending",
                                                "descending"
                                            ]
                                        }
                                    },
                                    "required": [
                                        "path",
                                        "order"
                                    ]
                                },
                                "required": [
                                    "items"
                                ]
                            }
                        },
                        "spatialIndexes": {
                            "type": "array"
                        }
                    }
                },
                "cosmosAccountDatabaseContainerTtl": {
                    "type": "number",
                    "minimum": 1
                }
            },
            "required": [
                "cosmosAccountDatabaseContainerName",
                "cosmosAccountDatabaseContainerPartitionKey"
            ]
        },
        "cosmos-accounts-graph-databases": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "array",
                    "description": "A list of databases to deploy with the Document DB Account. NOTE: Tables CANNOT be included it deploying Documents",
                    "items": {
                        "type": "object",
                        "allOf": [
                            {
                                "$ref": "#/definitions/cosmos-accounts-graph-database-parameters"
                            },
                            {
                                "type": "object",
                                "properties": {
                                    "cosmosAccountName": {
                                        "type": "string",
                                        "description": "The name of the database account in which the database lives in."
                                    },
                                    "cosmosAccountResourceGroup": {
                                        "type": "string",
                                        "description": "The name of the resource group the Database Account belongs to."
                                    }
                                },
                                "required": [
                                    "cosmosAccountName"
                                ]
                            }
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "cosmos-accounts-graph-database": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/cosmos-accounts-graph-database-parameters"
                        },
                        {
                            "type": "object",
                            "properties": {
                                "cosmosAccountName": {
                                    "type": "string",
                                    "description": "The name of the database account in which the database lives in."
                                },
                                "cosmosAccountResourceGroup": {
                                    "type": "string",
                                    "description": "The name of the resource group the Database Account belongs to."
                                }
                            },
                            "required": [
                                "cosmosAccountName"
                            ]
                        }
                    ]
                }
            },
            "required": [
                "value"
            ]
        },
        "cosmos-accounts-graph-database-parameters": {
            "type": "object",
            "properties": {
                "cosmosAccountDatabaseName": {
                    "type": "string",
                    "description": "The name of the Database."
                },
                "cosmosAccountDatabaseContainers": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/cosmos-accounts-graph-database-container-parameters"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "cosmosAccountDatabaseName"
            ]
        },
        "cosmos-accounts-graph-database-container": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/cosmos-accounts-graph-database-container-parameters"
                        },
                        {
                            "type": "object",
                            "properties": {
                                "cosmosAccountDatabaseName": {
                                    "type": "string"
                                },
                                "cosmosAccountName": {
                                    "type": "string"
                                },
                                "cosmosAccountResourceGroup": {
                                    "type": "string",
                                    "description": "The name of the Azure Resource Group the Database Account belongs to."
                                }
                            },
                            "required": [
                                "cosmosAccountDatabaseName",
                                "cosmosAccountName"
                            ]
                        }
                    ]
                }
            },
            "required": [
                "value"
            ]
        },
        "cosmos-accounts-graph-database-containers": {
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "allOf": [
                            {
                                "$ref": "#/definitions/cosmos-accounts-graph-database-container-parameters"
                            },
                            {
                                "type": "object",
                                "properties": {
                                    "cosmosAccountDatabaseName": {
                                        "type": "string"
                                    },
                                    "cosmosAccountName": {
                                        "type": "string"
                                    },
                                    "cosmosAccountResourceGroup": {
                                        "type": "string",
                                        "description": "The name of the Azure Resource Group the Database Account belongs to."
                                    }
                                },
                                "required": [
                                    "cosmosAccountDatabaseName",
                                    "cosmosAccountName",
                                    "cosmosAccountResourceGroup"
                                ]
                            }
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "cosmos-accounts-graph-database-container-parameters": {
            "type": "object",
            "properties": {
                "cosmosAccountDatabaseContainerName": {
                    "type": "string"
                },
                "cosmosAccountDatabaseContainerPartitionKey": {
                    "type": "object",
                    "properties": {
                        "kind": {
                            "type": "string",
                            "enum": [
                                "Hash",
                                "MultiHash",
                                "Range"
                            ]
                        },
                        "paths": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "pattern": "^/"
                            }
                        }
                    },
                    "required": [
                        "kind",
                        "paths"
                    ]
                },
                "cosmosAccountDatabaseContainerUniqueKeyPolicy": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "paths": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "string",
                                    "pattern": "^/"
                                }
                            }
                        },
                        "required": [
                            "paths"
                        ]
                    }
                },
                "cosmosAccountDatabaseContainerIndexingPolicy": {
                    "properties": {
                        "indexingMode": {
                            "type": "string",
                            "default": "consistent",
                            "enum": [
                                "none",
                                "consistent",
                                "lazy"
                            ]
                        },
                        "includePaths": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "path": {
                                        "type": "string"
                                    }
                                }
                            },
                            "default": [
                                {
                                    "path": "/*"
                                }
                            ]
                        },
                        "excludePaths": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "properties": {
                                    "path": {
                                        "type": "string"
                                    }
                                }
                            },
                            "default": [
                                {
                                    "path": "/\"_etag\"/?"
                                }
                            ]
                        },
                        "compositeIndexes": {
                            "type": "array",
                            "items": {
                                "type": "array",
                                "minItems": 2,
                                "items": {
                                    "properties": {
                                        "path": {
                                            "type": "string"
                                        },
                                        "order": {
                                            "type": "string",
                                            "enum": [
                                                "ascending",
                                                "descending"
                                            ]
                                        }
                                    },
                                    "required": [
                                        "path",
                                        "order"
                                    ]
                                },
                                "required": [
                                    "items"
                                ]
                            }
                        },
                        "spatialIndexes": {
                            "type": "array"
                        }
                    }
                },
                "cosmosAccountDatabaseContainerTtl": {
                    "type": "number",
                    "minimum": 1
                }
            },
            "required": [

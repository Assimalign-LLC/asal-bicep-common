{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "cosmos-account": {
            "oneOf": [
                {
                    "allOf": [
                        {
                            "$ref": "#/definitions/cosmos-account-parameters"
                        },
                        {
                            "properties": {
                                "cosmosAccountType": {
                                    "const": "EnableDocument"
                                },
                                "cosmosAccountDatabases": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/cosmos-accounts-document-database-parameters"
                                    },
                                    "minItems": 1
                                }
                            }
                        }
                    ]
                },
                {
                    "allOf": [
                        {
                            "$ref": "#/definitions/cosmos-account-parameters"
                        },
                        {
                            "properties": {
                                "cosmosAccountType": {
                                    "const": "EnableGremlin"
                                },
                                "cosmosAccountDatabases": {
                                    "type": "array",

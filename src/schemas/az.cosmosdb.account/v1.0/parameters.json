        },
        "cosmos-accounts-database-tables": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {}
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        }

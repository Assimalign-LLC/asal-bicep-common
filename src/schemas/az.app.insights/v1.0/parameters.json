{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "app-insight": {
            "type": "object",
            "properties": {
                "value": {
                    "$ref": "#/definitions/app-insight-parameters"
                }
            },
            "required": [
                "value"
            ]
        },
        "app-insights": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/app-insight-parameters"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "app-insight-parameters": {
            "type": "object",
            "properties": {
                "appInsightsName": {
                    "type": "string"
                },
                "appInsightsLocation": {
                    "type": "string"
                },
                "appInsightsKind": {
                    "type": "string",
                    "oneOf": [
                        {
                            "const": "web"
                        },
                        {
                            "const": "ios"
                        },
                        {
                            "const": "other"
                        },
                        {
                            "const": "store"
                        },
                        {
                            "const": "java"
                        },
                        {
                            "const": "phone"
                        }
                    ]
                },
                "appInsightsAnalyticWorkspaceName": {
                    "type": "string"
                },
                "appInsightsAnalyticWorkspaceResourceGroup": {
                    "type": "string"
                },
                "appInsightsTags": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-z]": {
                            "type": "string"
                        }
                    },
                    "minProperties": 1
                }
            },
            "required": [
                "appInsightsName",
                "appInsightsAnalyticWorkspaceName"
            ]
        },
        "app-insights-action-group": {
            "type": "object",
            "properties": {
                "value": {
                    "$ref": "#/definitions/app-insights-action-group-parameters"
                }
            },
            "required": [
                "value"
            ]
        },
        "app-insights-action-groups": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/app-insights-action-group-parameters"
                    }
                }
            },
            "required": [
                "value"
            ]
        },
        "app-insights-action-group-parameters": {
            "type": "object",
            "properties": {
                "appInsightsActionGroupName": {
                    "type": "string"
                },
                "appInsightsActionGroupLocation": {
                    "type": "string"
                },
                "appInsightsActionGroupShortName": {
                    "type": "string"
                },
                "appInsightsActionGroupEnabled": {
                    "type": "boolean"
                },
                "appInsightsActionGroupReceivers": {
                    "type": "object",
                    "properties": {
                        "azureAppPushReceivers": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "emailAddress": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "emailAddress",
                                    "name"
                                ]
                            },
                            "minItems": 1
                        },
                        "emailReceivers": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "emailAddress": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "emailAddress",
                                    "name"
                                ]
                            },
                            "minItems": 1
                        },
                        "smsReceivers": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "countryCode": {
                                        "type": "string",
                                        "oneOf": [
                                            {
                                                "const": "1"
                                            }
                                        ]
                                    },
                                    "phoneNumber": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "countryCode",
                                    "phoneNumber",
                                    "name"
                                ]
                            },
                            "minItems": 1
                        },
                        "armRoleReceivers": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "roleId": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    }
                                }
                            },
                            "minItems": 1
                        }
                    },
                    "minProperties": 1
                }
            },
            "required": [
                "appInsightsActionGroupName",
                "appInsightsActionGroupReceivers"
            ]
        },
        "app-insights-activity-log-alerts": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "appInsightsActivityLogAlertName": {
                                "type": "string"
                            },
                            "appInsightsActivityLogAlertDescription": {
                                "type": "string"
                            },
                            "appInsightsActivityLogAlertEnabled": {
                                "type": "boolean"
                            },
                            "appInsightsActivityLogAlertActionGroups": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "type": "string",
                                            "description": "The name or the Action Group."
                                        },
                                        "webhookProperties": {
                                            "type": "object"
                                        }
                                    },
                                    "required": [
                                        "name"
                                    ]
                                },
                                "minItems": 1
                            },
                            "appInsightsActivityLogAlertConditions": {
                                "$ref": "#/definitions/app-insights-conditions"
                            }
                        },
                        "required": [
                            "appInsightsActivityLogAlertName",
                            "appInsightsActivityLogAlertActionGroups",
                            "appInsightsActivityLogAlertConditions"
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "app-insights-alert-rules": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "appInsightsAlertRuleName": {
                                "type": "string"
                            },
                            "appInsightsAlertRuleDescription": {
                                "type": "string"
                            },
                            "appInsightsAlertRuleEnabled": {
                                "type": "boolean"
                            },
                            "appInsightsAlertRuleActionGroups": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "type": "string",
                                            "description": "The name or the Action Group."
                                        },
                                        "webhookProperties": {
                                            "type": "object"
                                        }
                                    },
                                    "required": [
                                        "name"
                                    ]
                                },
                                "minItems": 1
                            },
                            "appInsightsAlertRuleConditions": {
                                "$ref": "#/definitions/app-insights-conditions"
                            }
                        },
                        "required": [
                            "appInsightsAlertRuleName",
                            "appInsightsAlertRuleActionGroups",
                            "appInsightsAlertRuleConditions"
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "app-insights-conditions": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/app-insights-condition"
            },
            "minItems": 1
        },
        "app-insights-condition": {
            "type": "object",
            "properties": {
                "field": {
                    "type": "string"
                },
                "equals": {
                    "type": "string"
                },
                "containsAny": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "anyOf": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/app-insights-any-of-condition"
                    },
                    "minItems": 1
                }
            }
        },
        "app-insights-any-of-condition": {
            "type": "object",
            "properties": {
                "field": {
                    "type": "string"
                },
                "equals": {
                    "type": "string"
                },
                "containsAny": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
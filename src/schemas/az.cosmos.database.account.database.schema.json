{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "cosmosDatabases": {
            "properties": {
                "value": {
                    "type": "array",
                    "description": "A list of databases to deploy with the Document DB Account. NOTE: Tables CANNOT be included it deploying Documents",
                    "items": {
                        "type": "object",
                        "properties": {
                            "databaseName": {
                                "type": "string"
                            },
                            "databaseAccount": {
                                "type": "string",
                                "description": "The name of the database account in which the database lives in."
                            },
                            "databaseAccountResourceGroup": {
                                "type": "string"
                            },
                            "databaseContainers": {
                                "type": "array",
                                "items": {
                                    "$ref": "./az.cosmos.database.account.database.container.schema.json#definitions/cosmosDatabaseContainer"
                                }
                            }
                        },
                        "required": [
                            "databaseName",
                            "databaseAccountName",
                            "databaseAccountResourceGroup",
                            "databaseContainers"
                        ]
                    }
                }
            },
            "required": [
                "value"
            ]
        },
        "cosmosDatabase": {
            "type": "object",
            "properties": {
                "databaseName": {
                    "type": "string"
                },
                "databaseContainers": {
                    "type": "array",
                    "items": {
                        "$ref": "./az.cosmos.database.account.database.container.schema.json#definitions/cosmosDatabaseContainer"
                    }
                }
            },
            "required": [
                "databaseName",
                "databaseContainers"
            ]
        }
    }
}
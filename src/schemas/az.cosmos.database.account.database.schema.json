{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "cosmosDatabases": {
            "properties": {
                "value": {
                    "type": "array",
                    "description": "A list of databases to deploy with the Document DB Account. NOTE: Tables CANNOT be included it deploying Documents",
                    "items": {
                        "type": "object",
                        "properties": {
                            "databaseName": {
                                "type": "string"
                            },
                            "databaseAccountName": {
                                "type": "string"
                            },
                            "containers": {
                                "$ref": "./az.cosmos.database.account.database.container.schema.json#definitions/cosmosDatabaseContainer"
                            }
                        },
                        "required": [
                            "databaseName",
                            "databaseAccountName",
                            "containers"
                        ]
                    }
                }
            },
            "required": [
                "value"
            ]
        },
        "cosmosDatabase": {
            "type": "object",
            "properties": {
                "databaseName": {
                    "type": "string"
                },
                "containers": {
                    "$ref": "./az.cosmos.database.account.database.container.schema.json#definitions/cosmosDatabaseContainer"
                }
            },
            "required": [
                "databaseName",
                "containers"
            ]
        }
    }
}
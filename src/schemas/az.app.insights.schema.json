{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "appInsights": {
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "workspace": {
                                "type": "object",
                                "description": "The name of the Log Analytics Workspace to deploy the App Insights resource on",
                                "properties": {
                                    "workspaceName": {
                                        "type": "string"
                                    },
                                    "workspaceResourceGroup": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "workspaceName",
                                    "workspaceResourceGroup"
                                ]
                            },
                            "tags": {
                                "oneOf": [
                                    {
                                        "type": "object",
                                        "patternProperties": {
                                            "^[a-z]": {
                                                "type": "string"
                                            }
                                        },
                                        "minProperties": 1
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            }
                        },
                        "required": [
                            "name",
                            "workspace",
                            "tags"
                        ]
                    }
                }
            },
            "required": [
                "value"
            ]
        }
    }
}
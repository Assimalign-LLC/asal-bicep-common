{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "notification-hub-namespaces": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type":"object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "sku": {
                                "type": "object",
                                "properties": {
                                    "dev": {
                                        "type": "string",
                                        "oneOf": [
                                            {
                                                "const": "Free"
                                            },
                                            {
                                                "const": "Basic"
                                            },
                                            {
                                                "const": "Standard"
                                            }
                                        ]
                                    },
                                    "qa": {
                                        "type": "string",
                                        "oneOf": [
                                            {
                                                "const": "Free"
                                            },
                                            {
                                                "const": "Basic"
                                            },
                                            {
                                                "const": "Standard"
                                            }
                                        ]
                                    },
                                    "uat": {
                                        "type": "string",
                                        "oneOf": [
                                            {
                                                "const": "Free"
                                            },
                                            {
                                                "const": "Basic"
                                            },
                                            {
                                                "const": "Standard"
                                            }
                                        ]
                                    },
                                    "prd": {
                                        "type": "string",
                                        "oneOf": [
                                            {
                                                "const": "Free"
                                            },
                                            {
                                                "const": "Basic"
                                            },
                                            {
                                                "const": "Standard"
                                            }
                                        ]
                                    }
                                },
                                "required": [
                                    "dev",
                                    "qa",
                                    "uat",
                                    "prd"
                                ]
                            },
                            "hubs": {
                                "type": "array",
                                "items": {
                                    "$ref": "./az.notification.namespace.hub.schema.json#definitions/notificationNamespaceHub"
                                }
                            },
                            "policies": {
                                "type": "array",
                                "items": {
                                    "properties": {
                                        "name": {
                                            "type": "string"
                                        },
                                        "permissions": {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "anyOf": [
                                                    {
                                                        "const": "Listen"
                                                    },
                                                    {
                                                        "const": "Manage"
                                                    },
                                                    {
                                                        "const": "Send"
                                                    }
                                                ]
                                            },
                                            "minItems": 1
                                        }
                                    }
                                }
                            },
                            "tags": {
                                "oneOf": [
                                    {
                                        "type": "object",
                                        "patternProperties": {
                                            "^[a-z]": {
                                                "type": "string"
                                            }
                                        },
                                        "minProperties": 1
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            }
                        },
                        "required": [
                            "name",
                            "tags",
                            "sku",
                            "hubs",
                            "policies"
                        ]
                    }
                }
            },
            "required": [
                "value"
            ]
        },
        "notification-hub-namespace-hubs": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "The name of the Notification Namespace Hub"
                    },
                    "namespace": {
                        "type": "string",
                        "description": "The name of the notification Namespace."
                    }
                },
                "required": [
                    "name",
                    "namespace"
                ]
            }
        },
        "notification-hub-namespace-hub": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The name of the Notification Namespace Hub"
                }
            },
            "required": [
                "name"
            ]
        }
    }
}
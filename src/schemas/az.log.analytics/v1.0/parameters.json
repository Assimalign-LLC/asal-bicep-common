{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "logAnalyticWorkspaces": {
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "retention": {
                                "type": "number",
                                "description": "Number of Days to retain data",
                                "default": 30,
                                "minimum": 2
                            },
                            "dailyQuota": {
                                "type": "number",
                                "description": "The Daily Quota of ingestion in GBs",
                                "default": -1
                            },
                            "sku": {
                                "type": "object",
                                "properties": {
                                    "dev": {
                                        "type": "string",
                                        "default": "PerGB2018",
                                        "oneOf": [
                                            {
                                                "const": "Free"
                                            },
                                            {
                                                "const": "Standard"
                                            },
                                            {
                                                "const": "PerGB2018"
                                            },
                                            {
                                                "const": "Premium"
                                            },
                                            {
                                                "const": "PerNode"
                                            },
                                            {
                                                "const": "Standalone"
                                            },
                                            {
                                                "const": "LACluster"
                                            },
                                            {
                                                "const": "CapacityReservation"
                                            }
                                        ]
                                    },
                                    "qa": {
                                        "type": "string",
                                        "default": "PerGB2018",
                                        "oneOf": [
                                            {
                                                "const": "Free"
                                            },
                                            {
                                                "const": "Standard"
                                            },
                                            {
                                                "const": "PerGB2018"
                                            },
                                            {
                                                "const": "Premium"
                                            },
                                            {
                                                "const": "PerNode"
                                            },
                                            {
                                                "const": "Standalone"
                                            },
                                            {
                                                "const": "LACluster"
                                            },
                                            {
                                                "const": "CapacityReservation"
                                            }
                                        ]
                                    },
                                    "uat": {
                                        "type": "string",
                                        "default": "PerGB2018",
                                        "oneOf": [
                                            {
                                                "const": "Free"
                                            },
                                            {
                                                "const": "Standard"
                                            },
                                            {
                                                "const": "PerGB2018"
                                            },
                                            {
                                                "const": "Premium"
                                            },
                                            {
                                                "const": "PerNode"
                                            },
                                            {
                                                "const": "Standalone"
                                            },
                                            {
                                                "const": "LACluster"
                                            },
                                            {
                                                "const": "CapacityReservation"
                                            }
                                        ]
                                    },
                                    "prd": {
                                        "type": "string",
                                        "default": "PerGB2018",
                                        "oneOf": [
                                            {
                                                "const": "Free"
                                            },
                                            {
                                                "const": "Standard"
                                            },
                                            {
                                                "const": "PerGB2018"
                                            },
                                            {
                                                "const": "Premium"
                                            },
                                            {
                                                "const": "PerNode"
                                            },
                                            {
                                                "const": "Standalone"
                                            },
                                            {
                                                "const": "LACluster"
                                            },
                                            {
                                                "const": "CapacityReservation"
                                            }
                                        ]
                                    }
                                },
                                "required": [
                                    "dev",
                                    "qa",
                                    "uat",
                                    "prd"
                                ]
                            },
                            "publicNetworkAccessForIngestion": {
                                "type": "string",
                                "default": "Enabled",
                                "oneOf": [
                                    {
                                        "const": "Enabled"
                                    },
                                    {
                                        "const": "Disabled"
                                    }
                                ]
                            },
                            "publicNetworkAccessForQuery": {
                                "type": "string",
                                "default": "Enabled",
                                "oneOf": [
                                    {
                                        "const": "Enabled"
                                    },
                                    {
                                        "const": "Disabled"
                                    }
                                ]
                            },
                            "tags": {
                                "oneOf": [
                                    {
                                        "type": "object",
                                        "patternProperties": {
                                            "^[a-z]": {
                                                "type": "string"
                                            }
                                        },
                                        "minProperties": 1
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            }
                        },
                        "required": [
                            "name",
                            "sku",
                            "retention",
                            "dailyQuota",
                            "publicNetworkAccessForIngestion",
                            "publicNetworkAccessForQuery",
                            "tags"
                        ]
                    }
                }
            },
            "required": [
                "value"
            ]
        }
    }
}
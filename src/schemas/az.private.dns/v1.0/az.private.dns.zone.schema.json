{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "privateDnsZones": {
            "type": "object",
            "description": "An array of Virtual Networks to Peer to each other within the same Resource Group.",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "The name of the Private DNS Zone."
                            },
                            "networkLinks": {
                                "type": "array",
                                "items": {
                                    "properties": {
                                        "virtualLinkName": {
                                            "type": "string",
                                            "description": "A descriptive name for the Virtual Network the Private DNS Zone will be linked to."
                                        },
                                        "virtualNetwork": {
                                            "type": "string",
                                            "description": "The name of the virtual network to link to the Private DNS Zone."
                                        }
                                    },
                                    "required": [
                                        "virtualLinkName",
                                        "virtualNetwork"
                                    ]
                                },
                                "minItems": 1
                            },
                            "aRecords": {
                                "type": "array",
                                "items": {
                                    "$ref": "az.private.dns.zone.a.record.schema.json#definitions/privateDnsZoneARecord"
                                }
                            },
                            "aaaaRecords": {
                                "type": "array",
                                "items": {
                                    "$ref": "az.private.dns.zone.aaaa.record.schema.json#definitions/privateDnsZoneAaaaRecord"
                                }
                            },
                            "cnameRecords": {
                                "type": "array",
                                "items": {
                                    "$ref": "az.private.dns.zone.cname.record.schema.json#definitions/privateDnsZoneCnameRecord"
                                }
                            },
                            "ptrRecords": {
                                "type": "array",
                                "items": {
                                    "$ref": "az.private.dns.zone.ptr.record.schema.json#definitions/privateDnsZonePtrRecord"
                                }
                            },
                            "txtRecords": {
                                "type": "array",
                                "items": {
                                    "$ref": "az.private.dns.zone.txt.record.schema.json#definitions/privateDnsZoneTxtRecord"
                                }
                            },
                            "mxRecords": {
                                "type": "array",
                                "items": {
                                    "$ref": "az.private.dns.zone.mx.record.schema.json#definitions/privateDnsZoneMxRecord"
                                }
                            },
                            "srvRecords": {
                                "type": "array",
                                "items": {
                                    "$ref": "az.private.dns.zone.srv.record.schema.json#definitions/privateDnsZoneSrvRecord"
                                }
                            },
                            "tags": {
                                "oneOf": [
                                    {
                                        "type": "object",
                                        "patternProperties": {
                                            "^[a-z]": {
                                                "type":"string"
                                            }
                                        },
                                        "minProperties": 1
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            }
                        },
                        "required": [
                            "name",
                            "networkLinks",
                            "tags"
                        ]
                    }
                }
            },
            "required": [
                "value"
            ]
        }
    }
}
{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "databricks-workspace": {
            "type": "object",
            "properties": {
                "value": {
                    "$ref": "#/definitions/databricks-workspace-parameters"
                }
            },
            "required": [
                "value"
            ]
        },
        "databricks-workspaces": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/databricks-workspace-parameters"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "databricks-workspace-parameters": {
            "type": "object",
            "properties": {
                "databricksWorkspaceName": {
                    "type": "string"
                },
                "databricksWorkspaceResourceGroup": {
                    "type":"string"
                },
                "databricksWorkspaceLocation": {
                    "type":"string"
                },
                "databricksWorkspaceSku": {
                    "oneOf": [
                        {
                            "type": "object",
                            "properties": {
                                "default": {
                                    "$ref": "#/definitions/databricks-workspace-sku"
                                }
                            },
                            "required": [
                                "default"
                            ]
                        },
                        {
                            "type": "object",
                            "properties": {
                                "dev": {
                                    "$ref": "#/definitions/databricks-workspace-sku"
                                },
                                "qa": {
                                    "$ref": "#/definitions/databricks-workspace-sku"
                                },
                                "uat": {
                                    "$ref": "#/definitions/databricks-workspace-sku"
                                },
                                "prd": {
                                    "$ref": "#/definitions/databricks-workspace-sku"
                                }
                            },
                            "required": [
                                "dev"
                            ]
                        }
                    ]
                },
                "databricksWorkspaceConfigs": {
                    "type": "object",
                    "properties": {
                        "disablePublicIP": {
                            "type": "boolean"
                        },
                        "disablePublicNetworkAccess": {
                            "type": "boolean"
                        }
                        
                    }
                },
                "databricksWorkspacePrivateEndpoint": {
                    "$ref": "../../az.private.endpoint/v1.0/parameters.json#/definitions/private-endpoint-embedded"
                }
            },
            "required": [
                "databricksWorkspaceName",
                "databricksWorkspaceSku"
            ]
        },
        "databricks-workspace-sku": {
            "type": "string",
            "enum": [
                "standard",
                "premium"
            ]
        }
    }
}
{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "public-ip-address": {
            "type": "object",
            "properties": {
                "value": {
                    "$ref": "#/definitions/public-ip-address-parameters"
                }
            },
            "required": [
                "value"
            ]
        },
        "public-ip-addresses": {
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/public-ip-address-parameters"
                    }
                }
            },
            "required": [
                "value"
            ]
        },
        "public-ip-address-parameters": {
            "type": "object",
            "properties": {
                "publicIpName": {
                    "type": "string"
                },
                "publicIpSku": {
                    "oneOf": [
                        {
                            "type": "object",
                            "properties": {
                                "default": {
                                    "$ref": "#/definitions/public-ip-sku"
                                }
                            },
                            "required": [
                                "default"
                            ]
                        },
                        {
                            "type": "object",
                            "properties": {
                                "dev": {
                                    "$ref": "#/definitions/public-ip-sku"
                                },
                                "qa": {
                                    "$ref": "#/definitions/public-ip-sku"
                                },
                                "uat": {
                                    "$ref": "#/definitions/public-ip-sku"
                                },
                                "prd": {
                                    "$ref": "#/definitions/public-ip-sku"
                                }
                            },
                            "required": [
                                "dev",
                                "qa",
                                "uat",
                                "prd"
                            ]
                        }
                    ]
                },
                "publicIpAllocationMethod": {
                    "type": "string",
                    "enum": [
                        "Dynamic",
                        "Static"
                    ]
                },
                "publicIpConfigs": {
                    "type": "object",
                    "properties": {
                        "dnsNameLabel": {
                            "type": "string"
                        }
                    },
                    "minProperties": 1
                },
                "publicIpTags": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-z]": {
                            "type": "string"
                        }
                    },
                    "minProperties": 1
                }
            },
            "required": [
                "publicIpName",
                "publicIpSku",
                "publicIpAllocationMethod"
            ]
        },
        "public-ip-sku": {
            "type":"string",
            "enum": [
                "Basic",
                "Standard"
            ]
        }
    }
}
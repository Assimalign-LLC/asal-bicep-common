{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "resourceGroup": {
            "type": "object",
            "description": "The Resource Group in which all resource will be deployed under.",
            "properties": {
                "value": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "tags": {
                            "oneOf": [
                                {
                                    "type": "object",
                                    "patternProperties": {
                                        "^[a-z]": {
                                            "type": "string"
                                        }
                                    },
                                    "minProperties": 1
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        }
                    },
                    "required": [
                        "name"
                    ]
                }
            },
            "required": [
                "value"
            ]
        }
    }
}
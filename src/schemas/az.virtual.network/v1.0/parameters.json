{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "virtual-networks": {
            "type": "object",
            "description": "An array of Virtual Networks to be deployed",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "properties": {
                            "virtualNetworkName": {
                                "type": "string"
                            },
                            "virtualNetworkAddressSpaces": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "pattern": "(25[0-5]|2[0-4][0-9]|1[0-9][0-9]|^[0-9][0-9]|^[0-9])(\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)){3}(/[1-9]|/1[0-9]|/2[0-9]|/3[0-2])",
                                    "minLength": 9,
                                    "maxLength": 18
                                },
                                "minItems": 1
                            },
                            "virtualNetworkSubnets": {
                                "type": "array",
                                "items": {
                                    "properties": {
                                        "name": {
                                            "type": "string",
                                            "description": "The name of the Subnet to create within the virtual network."
                                        },
                                        "range": {
                                            "type": "string",
                                            "pattern": "(25[0-5]|2[0-4][0-9]|1[0-9][0-9]|^[0-9][0-9]|^[0-9])(\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)){3}(/[1-9]|/1[0-9]|/2[0-9]|/3[0-2])",
                                            "minLength": 9,
                                            "maxLength": 18
                                        },
                                        "serviceEndpoints": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "service": {
                                                        "type": "string"
                                                    }
                                                },
                                                "required": [
                                                    "service"
                                                ]
                                            }
                                        },
                                        "privateEndpointNetworkPolicies": {
                                            "type": "string",
                                            "oneOf": [
                                                {
                                                    "const": "Enabled"
                                                },
                                                {
                                                    "const": "Disabled"
                                                }
                                            ]
                                        }
                                    },
                                    "required": [
                                        "name",
                                        "range",
                                        "serviceEndpoints",
                                        "privateEndpointNetworkPolicies"
                                    ]
                                }
                            },
                            "virtualNetworkTags": {
                                "type": "object",
                                "patternProperties": {
                                    "^[a-z]": {
                                        "type": "string"
                                    }
                                },
                                "minProperties": 1
                            }
                        },
                        "required": [
                            "virtualNetworkName",
                            "virtualNetworkAddressSpaces"
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "virtual-networks-peering": {
            "type": "object",
            "description": "An array of Virtual Networks to Peer to each other within the same Resource Group.",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "properties": {
                            "peeringLinkName": {
                                "type": "string"
                            },
                            "peeringVirtualNetwork": {
                                "type": "string"
                            },
                            "peeringVirtualNetworkResourceGroup": {
                                "type": "string"
                            },
                            "remoteLinkName": {
                                "type": "string"
                            },
                            "remoteVirtualNetwork": {
                                "type": "string"
                            },
                            "remoteVirtualNetworkResourceGroup": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "peeringLinkName",
                            "peeringVirtualNetwork",
                            "remoteLinkName",
                            "remoteVirtualNetwork"
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        }
    }
}
{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "virtual-network": {
            "type": "object",
            "description": "An array of Virtual Networks to be deployed",
            "properties": {
                "value": {
                    "$ref": "#/definitions/virtual-network-parameters"
                }
            },
            "required": [
                "value"
            ]
        },
        "virtual-networks": {
            "type": "object",
            "description": "An array of Virtual Networks to be deployed",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/virtual-network-parameters"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "virtual-network-parameters": {
            "type": "object",
            "properties": {
                "virtualNetworkName": {
                    "type": "string"
                },
                "virtualNetworkLocation": {
                    "type": "string"
                },
                "virtualNetworkResourceGroup": {
                    "type": "string"
                },
                "virtualNetworkAddressSpaces": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": "(25[0-5]|2[0-4][0-9]|1[0-9][0-9]|^[0-9][0-9]|^[0-9])(\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)){3}(/[1-9]|/1[0-9]|/2[0-9]|/3[0-2])",
                        "minLength": 9,
                        "maxLength": 18
                    },
                    "minItems": 1
                },
                "virtualNetworkSubnets": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/virtual-network-subnet-parameters"
                    },
                    "minItems": 1
                },
                "virtualNetworkConfigs": {
                    "type": "object",
                    "properties": {
                        "enableDdosProtection": {
                            "type": "boolean"
                        },
                        "enableVmProtection": {
                            "type": "boolean"
                        }
                    }
                },
                "virtualNetworkTags": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-z]": {
                            "type": "string"
                        }
                    },
                    "minProperties": 1
                }
            },
            "required": [
                "virtualNetworkName",
                "virtualNetworkAddressSpaces"
            ]
        },
        "virtual-network-subnet": {
            "type": "object",
            "description": "An array of Virtual Networks to be deployed",
            "properties": {
                "value": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/virtual-network-subnet-parameters"
                        },
                        {
                            "properties": {
                                "virtualNetworkResourceGroup": {
                                    "type": "string"
                                }
                            }
                        }
                    ]
                }
            }
        },
        "virtual-network-subnets": {
            "type": "object",
            "description": "An array of Virtual Networks to be deployed",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "allOf": [
                            {
                                "$ref": "#/definitions/virtual-network-subnet-parameters"
                            },
                            {
                                "properties": {
                                    "virtualNetworkResourceGroup": {
                                        "type": "string"
                                    }
                                }
                            }
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "virtual-network-subnet-parameters": {
            "type": "object",
            "properties": {
                "virtualNetworkSubnetName": {
                    "type": "string",
                    "description": "The name of the Subnet to create within the virtual network."
                },
                "virtualNetworkSubnetRange": {
                    "type": "string",
                    "pattern": "(25[0-5]|2[0-4][0-9]|1[0-9][0-9]|^[0-9][0-9]|^[0-9])(\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)){3}(/[1-9]|/1[0-9]|/2[0-9]|/3[0-2])",
                    "minLength": 9,
                    "maxLength": 18
                },
                "virtualNetworkSubnetConfigs": {
                    "type": "object",
                    "properties": {
                        "subnetDelegation": {
                            "type": "string",
                            "enum": [
                                "Microsoft.Web/hostingEnvironments",
                                "Microsoft.Orbital/orbitalGateways"
                            ]
                        },
                        "subnetPrivateEndpointNetworkPolicies": {
                            "type": "string",
                            "enum": [
                                "Enabled",
                                "Disabled"
                            ]
                        },
                        "subnetServiceEndpoints": {
                            "type": "array",
                            "items": {
                                "properties": {
                                    "locations": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    "service": {
                                        "type": "string",
                                        "enum": [
                                            "Microsoft.AzureActiveDirectory",
                                            "Microsoft.AzureCosmosDB",
                                            "Microsoft.CognitiveServices",
                                            "Microsoft.ContainerRegistry",
                                            "Microsoft.EventHub",
                                            "Microsoft.KeyVault",
                                            "Microsoft.ServiceBus",
                                            "Microsoft.Sql",
                                            "Microsoft.Storage",
                                            "Microsoft.Web"
                                        ]
                                    }
                                },
                                "required": [
                                    "service"
                                ]
                            },
                            "minItems": 1
                        },
                        "subnetNetworkSecurityGroup": {
                            "type": "object",
                            "properties": {
                                "nsgName": {
                                    "type": "string"
                                },
                                "nsgResourceGroup": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "nsgName",
                                "nsgResourceGroup"
                            ]
                        }
                    }
                }
            },
            "required": [
                "virtualNetworkSubnetName",
                "virtualNetworkSubnetRange",
                "virtualNetworkSubnetConfigs"
            ]
        },
        "virtual-network-peering": {
            "type": "object",
            "description": "An array of Virtual Networks to Peer to each other within the same Resource Group.",
            "properties": {
                "value": {
                    "$ref": "#/definitions/virtual-network-peering-parameters"
                }
            },
            "required": [
                "value"
            ]
        },
        "virtual-network-peerings": {
            "type": "object",
            "description": "An array of Virtual Networks to Peer to each other within the same Resource Group.",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/virtual-network-peering-parameters"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "virtual-network-peering-parameters": {
            "type": "object",
            "properties": {
                "peeringLinkName": {
                    "type": "string"
                },
                "peeringVirtualNetwork": {
                    "type": "string"
                },
                "peeringVirtualNetworkResourceGroup": {
                    "type": "string"
                },
                "remoteLinkName": {
                    "type": "string"
                },
                "remoteVirtualNetwork": {
                    "type": "string"
                },
                "remoteVirtualNetworkResourceGroup": {
                    "type": "string"
                }
            },
            "required": [
                "peeringLinkName",
                "peeringVirtualNetwork",
                "remoteLinkName",
                "remoteVirtualNetwork"
            ]
        }
    }
}
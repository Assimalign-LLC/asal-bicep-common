{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "network-security-group": {
            "type": "object",
            "description": "A single Network Security Groups to be deployed.",
            "properties": {
                "value": {
                    "$ref": "#/definitions/network-security-group-parameters"
                }
            },
            "required": [
                "value"
            ]
        },
        "network-security-groups": {
            "type": "object",
            "description": "An array of Network Security Groups to be deployed.",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/network-security-group-parameters"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "network-security-group-parameters": {
            "type": "object",
            "properties": {
                "networkSecurityGroupName": {
                    "type": "string"
                },
                "networkSecurityGroupOutboundRules": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/network-security-group-rules-parameters"
                    },
                    "minItems": 1
                },
                "networkSecurityGroupInboundRules": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/network-security-group-rules-parameters"
                    },
                    "minItems": 1
                },
                "networkSecurityGroupTags": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-z]": {
                            "type": "string"
                        }
                    },
                    "minProperties": 1
                }
            },
            "required": [
                "networkSecurityGroupName"
            ]
        },
        "network-security-group-rules-parameters": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "protocol": {
                    "type": "string",
                    "enum": [
                        "*",
                        "Tcp",
                        "Udp",
                        "Esp",
                        "Icmp",
                        "Ah"
                    ]
                },
                "access": {
                    "type": "string",
                    "enum": [
                        "Allow",
                        "Deny"
                    ]
                },
                "priority": {
                    "type": "integer",
                    "minimum": 0
                },
                "sourceType": {
                    "type":"string"
                },
                "sourcePorts": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1
                },
                "destinationType": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1
                },
                "destinationPorts": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "name",
                "protocol",
                "access",
                "priority"
            ]
        }
    }
}
                                "dev": {
                                    "type": "string"
                                },
                                "qa": {
                                    "type": "string"
                                },
                                "uat": {
                                    "type": "string"
                                },
                                "prd": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "dev",
                                "qa",
                                "uat",
                                "prd"
                            ]
                        },
                        "azureAdAuthenticationOnly": {
                            "type": "object",
                            "properties": {
                                "dev": {
                                    "type": "boolean"
                                },
                                "qa": {
                                    "type": "boolean"
                                },
                                "uat": {
                                    "type": "boolean"
                                },
                                "prd": {
                                    "type": "boolean"
                                }
                            },
                            "required": [
                                "dev",
                                "qa",
                                "uat",
                                "prd"
                            ]
                        }

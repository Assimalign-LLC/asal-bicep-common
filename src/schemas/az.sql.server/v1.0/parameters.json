                    "type": "boolean"
                },
                "sqlServerAccountAdminUsername": {
                    "type": "string"
                },
                "sqlServerAccountAdminPassword": {
                    "type": "string"
                },
                "sqlServerAccountAdministrators": {
                    "type": "object",
                    "properties": {
                        "azureAdObjectType": {
                            "type": "object",
                            "properties": {
                                "dev": {
                                    "type": "string",
                                    "oneOf": [
                                        {
                                            "const": "User"
                                        },

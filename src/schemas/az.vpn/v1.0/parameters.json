{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "vpn-gateways": {
            "type": "object",
            "description": "An array of VPN Gateways to deploy the within a specified Virtual Network.",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "The name of the VPN Gateway"
                            },
                            "vpnType": {
                                "type": "string",
                                "oneOf": [
                                    {
                                        "const": "RouteBased"
                                    },
                                    {
                                        "const": "PolicyBased"
                                    }
                                ]
                            },
                            "vpnIpName": {
                                "type": "string",
                                "description": "The Name of the new Public IP Address that will be deployed for the VPN Gateway"
                            },
                            "virtualNetwork": {
                                "type": "string",
                                "description": "The name of the virtual network the VPN will live under. DO NOT include Resource Prefix in name."
                            },
                            "clientSettings": {
                                "type": "object",
                                "description": "These settings are used to configure how a VPN Client will connect to the VPN Gateway. Also known as Point-to-site configurations.",
                                "properties": {
                                    "authentication": {
                                        "type": "string",
                                        "oneOf": [
                                            {
                                                "const": "AzureActiveDirectory"
                                            },
                                            {
                                                "const": "AzureCertificate"
                                            },
                                            {
                                                "const": "Radius"
                                            }
                                        ]
                                    },
                                    "addressPool": {
                                        "type": "string",
                                        "pattern": "(25[0-5]|2[0-4][0-9]|1[0-9][0-9]|^[0-9][0-9]|^[0-9])(\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)){3}(/[1-9]|/1[0-9]|/2[0-9]|/3[0-2])",
                                        "minLength": 9,
                                        "maxLength": 18
                                    }
                                },
                                "if": {
                                    "properties": {
                                        "authentication": {
                                            "const": "AzureActiveDirectory"
                                        }
                                    }
                                },
                                "then": {

                                },
                                "required": [
                                    "authentication",
                                    "addressPool"
                                ]
                            },
                            "tags": {
                                "oneOf": [
                                    {
                                        "type": "object",
                                        "patternProperties": {
                                            "^[a-z]": {
                                                "type":"string"
                                            }
                                        },
                                        "minProperties": 1
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            }
                        },
                        "if": {
                            "properties": {
                                "vpnType": {
                                    "const": "RouteBased"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "sku": {
                                    "type": "object",
                                    "properties": {
                                        "dev": {
                                            "type": "string",
                                            "oneOf": [
                                                {
                                                    "const": "Basic"
                                                },
                                                {
                                                    "const": "VpnGw1"
                                                },
                                                {
                                                    "const": "VpnGw2"
                                                },
                                                {
                                                    "const": "VpnGw3"
                                                },
                                                {
                                                    "const": "VpnGw4"
                                                },
                                                {
                                                    "const": "VpnGw5"
                                                }
                                            ]
                                        },
                                        "qa": {
                                            "type": "string",
                                            "oneOf": [
                                                {
                                                    "const": "Basic"
                                                },
                                                {
                                                    "const": "VpnGw1"
                                                },
                                                {
                                                    "const": "VpnGw2"
                                                },
                                                {
                                                    "const": "VpnGw3"
                                                },
                                                {
                                                    "const": "VpnGw4"
                                                },
                                                {
                                                    "const": "VpnGw5"
                                                }
                                            ]
                                        },
                                        "uat": {
                                            "type": "string",
                                            "oneOf": [
                                                {
                                                    "const": "Basic"
                                                },
                                                {
                                                    "const": "VpnGw1"
                                                },
                                                {
                                                    "const": "VpnGw2"
                                                },
                                                {
                                                    "const": "VpnGw3"
                                                },
                                                {
                                                    "const": "VpnGw4"
                                                },
                                                {
                                                    "const": "VpnGw5"
                                                }
                                            ]
                                        },
                                        "prd": {
                                            "type": "string",
                                            "oneOf": [
                                                {
                                                    "const": "Basic"
                                                },
                                                {
                                                    "const": "VpnGw1"
                                                },
                                                {
                                                    "const": "VpnGw2"
                                                },
                                                {
                                                    "const": "VpnGw3"
                                                },
                                                {
                                                    "const": "VpnGw4"
                                                },
                                                {
                                                    "const": "VpnGw5"
                                                }
                                            ]
                                        }
                                    }
                                }
                            }
                        },
                        "else": {
                            "properties": {
                                "sku": {
                                    "type": "object",
                                    "properties": {
                                        "dev": {
                                            "type": "string",
                                            "oneOf": [
                                                {
                                                    "const": "Basic"
                                                }
                                            ]
                                        },
                                        "qa": {
                                            "type": "string",
                                            "oneOf": [
                                                {
                                                    "const": "Basic"
                                                }
                                            ]
                                        },
                                        "uat": {
                                            "type": "string",
                                            "oneOf": [
                                                {
                                                    "const": "Basic"
                                                }
                                            ]
                                        },
                                        "prd": {
                                            "type": "string",
                                            "oneOf": [
                                                {
                                                    "const": "Basic"
                                                }
                                            ]
                                        }
                                    }
                                }
                            }
                        },
                        "required": [
                            "name",
                            "vpnType",
                            "vpnIpName",
                            "sku",
                            "virtualNetwork",
                            "tags"
                        ]
                    }
                }
            },
            "required": [
                "value"
            ]
        }
    }
}
{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "storageAccountBlobServices": {
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "default": "default"
                            },
                            "storageAccountName": {
                                "type": "string"
                            },
                            "storageAccountResourceGroup": {
                                "type": "string"
                            },
                            "enableVersioning": {
                                "type": "boolean"
                            },
                            "enableSnapshot": {
                                "type": "boolean"
                            },
                            "retentionPolicy": {
                                "oneOf": [
                                    {
                                        "type": "object",
                                        "properties": {
                                            "days": {
                                                "type": "number"
                                            }
                                        },
                                        "required": [
                                            "days"
                                        ]
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            },
                            "restorePolicy": {
                                "oneOf": [
                                    {
                                        "type": "object",
                                        "properties": {
                                            "days": {
                                                "type": "number"
                                            }
                                        },
                                        "required": [
                                            "days"
                                        ]
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            },
                            "containers": {
                                "type": "array",
                                "items": {
                                    "$ref": "#definitions/storageAccountBlobServiceContainer"
                                }
                            },
                            "privateEndpoint": {
                                "$ref": "#definitions/storageAccountBlobServicePrivateEndpoint"
                            }
                        },
                        "required": [
                            "name",
                            "storageAccountName",
                            "storageAccountResourceGroup",
                            "retentionPolicy",
                            "restorePolicy",
                            "enableSnapshot",
                            "enableVersioning",
                            "containers",
                            "privateEndpoint"
                        ]
                    }
                }
            }
        },
        "storageAccountBlobService": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "default": "default"
                },
                "enableVersioning": {
                    "type": "boolean"
                },
                "enableSnapshot": {
                    "type": "boolean"
                },
                "retentionPolicy": {
                    "oneOf": [
                        {
                            "type": "object",
                            "properties": {
                                "days": {
                                    "type": "number"
                                }
                            },
                            "required": [
                                "days"
                            ]
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "restorePolicy": {
                    "oneOf": [
                        {
                            "type": "object",
                            "properties": {
                                "days": {
                                    "type": "number"
                                }
                            },
                            "required": [
                                "days"
                            ]
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "containers": {
                    "type": "array",
                    "items": {
                        "$ref": "#definitions/storageAccountBlobServiceContainer"
                    }
                },
                "privateEndpoint": {
                    "$ref": "#definitions/storageAccountBlobServicePrivateEndpoint"
                }
            },
            "required": [
                "name",
                "containers",
                "retentionPolicy",
                "restorePolicy",
                "enableSnapshot",
                "enableVersioning",
                "privateEndpoint"
            ]
        },
        "storageAccountBlobServiceContainers": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "storageAccountName": {
                                "type": "string"
                            },
                            "storageAccountBlobServiceName": {
                                "type": "string"
                            },
                            "storageAccountResourceGroup": {
                                "type": "string"
                            },
                            "enableVersioning": {
                                "type": "boolean",
                                "default": false
                            },
                            "accessLevel": {
                                "type": "string",
                                "default": "None",
                                "oneOf": [
                                    {
                                        "const": "None"
                                    },
                                    {
                                        "const": "Blob"
                                    },
                                    {
                                        "const": "Container"
                                    }
                                ]
                            }
                        },
                        "required": [
                            "name",
                            "storageAccountName",
                            "storageAccountBlobServiceName",
                            "storageAccountResourceGroup",
                            "accessLevel",
                            "enableVersioning"
                        ]
                    }
                }
            },
            "required": [
                "value"
            ]
        },
        "storageAccountBlobServiceContainer": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "enableVersioning": {
                    "type": "boolean",
                    "default": false
                },
                "accessLevel": {
                    "type": "string",
                    "default": "None",
                    "oneOf": [
                        {
                            "const": "None"
                        },
                        {
                            "const": "Blob"
                        },
                        {
                            "const": "Container"
                        }
                    ]
                }
            },
            "required": [
                "name",
                "accessLevel",
                "enableVersioning"
            ]
        },
        "storageAccountBlobServicePrivateEndpoint": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "privateDnsZone": {
                            "type": "string"
                        },
                        "privateDnsZoneResourceGroup": {
                            "type": "string",
                            "description": ""
                        },
                        "virtualNetwork": {
                            "type": "string"
                        },
                        "virtualNetworkSubnet": {
                            "type": "string"
                        },
                        "virtualNetworkResourceGroup": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "name",
                        "privateDnsZone",
                        "privateDnsZoneResourceGroup",
                        "virtualNetwork",
                        "virtualNetworkSubnet",
                        "virtualNetworkResourceGroup"
                    ]
                },
                {
                    "type": "null"
                }
            ]
        }
    }
}
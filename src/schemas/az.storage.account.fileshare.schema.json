{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "storageAccountFileShareServices": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "default": "default"
                            },
                            "storageAccountName": {
                                "type": "string"
                            },
                            "storageAccountResourceGroup": {
                                "type": "string"
                            },
                            "shares": {
                                "type": "array",
                                "items": {
                                    "$ref": "#definitions/storageAccountFileShareServiceShare"
                                }
                            },
                            "privateEndpoint": {
                                "$ref": "#definitions/storageAccountFileShareServicePrivateEndpoint"
                            }
                        },
                        "required": [
                            "name",
                            "storageAccountName",
                            "storageAccountResourceGroup",
                            "shares",
                            "privateEndpoint"
                        ]
                    }
                }
            }
        },
        "storageAccountFileShareService": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "default": "default"
                },
                "shares": {
                    "type": "array",
                    "items": {
                        "$ref": "#definitions/storageAccountFileShareServiceShare"
                    }
                },
                "privateEndpoint": {
                    "$ref": "#definitions/storageAccountFileShareServicePrivateEndpoint"
                }
            },
            "required": [
                "name",
                "privateEndpoint",
                "shares"
            ]
        },
        "storageAccountFileShareServiceShare": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "accessTier": {
                    "type": "string",
                    "oneOf": [
                        {
                            "const": "Cools"
                        },
                        {
                            "const": "Hot"
                        },
                        {
                            "const": "Premium"
                        },
                        {
                            "const": "TransactionOptimized"
                        }
                    ]
                }
            },
            "required": [
                "name",
                "accessTier"
            ]
        },
        "storageAccountFileShareServiceShares": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "storageAccountName": {
                                "type": "string"
                            },
                            "storageAccountFileShareServiceName": {
                                "type": "string"
                            },
                            "storageAccountResourceGroup": {
                                "type": "string"
                            },
                            "accessTier": {
                                "type": "string",
                                "oneOf": [
                                    {
                                        "const": "Cools"
                                    },
                                    {
                                        "const": "Hot"
                                    },
                                    {
                                        "const": "Premium"
                                    },
                                    {
                                        "const": "TransactionOptimized"
                                    }
                                ]
                            }
                        },
                        "required": [
                            "name",
                            "accessTier",
                            "storageAccountName",
                            "storageAccountFileShareServiceName",
                            "storageAccountResourceGroup"
                        ]
                    }
                }
            },
            "required": [
                "value"
            ]
        },
        "storageAccountFileShareServicePrivateEndpoint": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "privateDnsZone": {
                            "type": "string"
                        },
                        "privateDnsZoneResourceGroup": {
                            "type": "string",
                            "description": ""
                        },
                        "virtualNetwork": {
                            "type": "string"
                        },
                        "virtualNetworkSubnet": {
                            "type": "string"
                        },
                        "virtualNetworkResourceGroup": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "name",
                        "privateDnsZone",
                        "privateDnsZoneResourceGroup",
                        "virtualNetwork",
                        "virtualNetworkSubnet",
                        "virtualNetworkResourceGroup"
                    ]
                },
                {
                    "type": "null"
                }
            ]
        }
    }
}
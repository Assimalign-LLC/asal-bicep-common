{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "sqlServerDatabases": {
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "server": {
                                "type": "string",
                                "description": "The name of the SQL Server Instance"
                            },
                            "sku": {
                                "type": "object",
                                "properties": {
                                    "dev": {
                                        "type": "object",
                                        "properties": {
                                            "capacity": {
                                                "type": "number"
                                            },
                                            "family": {
                                                "type": "string"
                                            },
                                            "tier": {
                                                "type": "string",
                                                "oneOf": [
                                                    {
                                                        "const": "Basic"
                                                    },
                                                    {
                                                        "const": "Standard"
                                                    },
                                                    {
                                                        "const": "Premium"
                                                    },
                                                    {
                                                        "const": "GeneralPurpose"
                                                    },
                                                    {
                                                        "const": "Hyperscale"
                                                    },
                                                    {
                                                        "const": "BusinessCritical"
                                                    }
                                                ]
                                            },
                                            "name": {
                                                "type": "string"
                                            }
                                        },
                                        "if": {
                                            "properties": {
                                                "name": {
                                                    "enum": [
                                                        "GeneralPurpose",
                                                        "Hyperscale",
                                                        "BusinessCritical"
                                                    ]
                                                }
                                            }
                                        },
                                        "then": {
                                            "properties": {
                                                "family": {
                                                    "oneOf": [
                                                        {
                                                            "const": "Gen5"
                                                        },
                                                        {
                                                            "const": "FSv2-series"
                                                        },
                                                        {
                                                            "const": "DC-series"
                                                        },
                                                        {
                                                            "const": "M-seriesd"
                                                        }
                                                    ]
                                                }
                                            }
                                        },
                                        "else": {}
                                    },
                                    "qa": {
                                        "type": "string"
                                    },
                                    "uat": {
                                        "type": "string"
                                    },
                                    "prd": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "required": [
                            "name",
                            "server",
                            "sku"
                        ]
                    }
                }
            },
            "required": [
                "value"
            ]
        },
        "sqlServerDatabase": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "sku": {
                    "type": "object",
                    "properties": {
                        "dev": {
                            "type": "object",
                            "properties": {
                                "capacity": {
                                    "type": "number"
                                },
                                "family": {
                                    "type": "string"
                                },
                                "tier": {
                                    "type": "string",
                                    "oneOf": [
                                        {
                                            "const": "Basic"
                                        },
                                        {
                                            "const": "Standard"
                                        },
                                        {
                                            "const": "Premium"
                                        },
                                        {
                                            "const": "GeneralPurpose"
                                        },
                                        {
                                            "const": "Hyperscale"
                                        },
                                        {
                                            "const": "BusinessCritical"
                                        }
                                    ]
                                },
                                "name": {
                                    "type": "string"
                                }
                            },
                            "if": {
                                "properties": {
                                    "name": {
                                        "enum": [
                                            "GeneralPurpose",
                                            "Hyperscale",
                                            "BusinessCritical"
                                        ]
                                    }
                                }
                            },
                            "then": {
                                "properties": {
                                    "family": {
                                        "oneOf": [
                                            {
                                                "const": "Gen5"
                                            },
                                            {
                                                "const": "FSv2-series"
                                            },
                                            {
                                                "const": "DC-series"
                                            },
                                            {
                                                "const": "M-seriesd"
                                            }
                                        ]
                                    }
                                }
                            },
                            "else": {}
                        },
                        "qa": {
                            "type": "string"
                        },
                        "uat": {
                            "type": "string"
                        },
                        "prd": {
                            "type": "string"
                        }
                    }
                }
            },
            "required": [
                "name",
                "sku"
            ]
        }
    }
}
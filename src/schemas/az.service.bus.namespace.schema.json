{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "serviceBusNamespaces": {
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "enableMsi": {
                                "type": "boolean"
                            },
                            "sku": {
                                "type": "object",
                                "properties": {
                                    "dev": {
                                        "type": "string",
                                        "oneOf": [
                                            {
                                                "const": "Basic"
                                            },
                                            {
                                                "const": "Standard"
                                            },
                                            {
                                                "const": "Premium"
                                            }
                                        ]
                                    },
                                    "qa": {
                                        "oneOf": [
                                            {
                                                "const": "Basic"
                                            },
                                            {
                                                "const": "Standard"
                                            },
                                            {
                                                "const": "Premium"
                                            }
                                        ]
                                    },
                                    "uat": {
                                        "type": "string",
                                        "oneOf": [
                                            {
                                                "const": "Basic"
                                            },
                                            {
                                                "const": "Standard"
                                            },
                                            {
                                                "const": "Premium"
                                            }
                                        ]
                                    },
                                    "prd": {
                                        "type": "string",
                                        "oneOf": [
                                            {
                                                "const": "Basic"
                                            },
                                            {
                                                "const": "Standard"
                                            },
                                            {
                                                "const": "Premium"
                                            }
                                        ]
                                    }
                                },
                                "required": [
                                    "dev",
                                    "qa",
                                    "uat",
                                    "prd"
                                ]
                            },
                            "queues": {
                                "type": "array",
                                "items": {
                                    "$ref": "az.service.bus.namespace.queue.schema.json#definitions/serviceBusNamespaceQueue"
                                }
                            },
                            "topics": {
                                "type": "array",
                                "items": {
                                    "$ref": "az.service.bus.namespace.topic.schema.json#definitions/serviceBusNamespaceTopic"
                                }
                            },
                            "policies": {
                                "type": "array",
                                "items": {
                                    "properties": {
                                        "name": {
                                            "type": "string"
                                        },
                                        "permissions": {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "anyOf": [
                                                    {
                                                        "const": "Listen"
                                                    },
                                                    {
                                                        "const": "Manage"
                                                    },
                                                    {
                                                        "const": "Send"
                                                    }
                                                ]
                                            },
                                            "minItems": 1
                                        }
                                    }
                                }
                            },
                            "tags": {
                                "oneOf": [
                                    {
                                        "type": "object",
                                        "patternProperties": {
                                            "^[a-z]": {
                                                "type": "string"
                                            }
                                        },
                                        "minProperties": 1
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            }
                        },
                        "required": [
                            "name",
                            "sku",
                            "tags",
                            "enableMsi",
                            "queues",
                            "topics",
                            "policies"
                        ]
                    }
                }
            },
            "required": [
                "value"
            ]
        }
    }
}
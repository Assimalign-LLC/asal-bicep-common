{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "static-sites": {
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "location": {
                                "type": "string",
                                "oneOf": [
                                    {
                                        "const": "centralus"
                                    },
                                    {
                                        "const": "eastus2"
                                    },
                                    {
                                        "const": "westus2"
                                    },
                                    {
                                        "const": "eastasia"
                                    },
                                    {
                                        "const": "westeurope"
                                    }
                                ]
                            },
                            "sku": {
                                "type": "object",
                                "properties": {
                                    "dev": {
                                        "type": "string",
                                        "oneOf": [
                                            {
                                                "const": "Free"
                                            },
                                            {
                                                "const": "Standard"
                                            }
                                        ]
                                    },
                                    "qa": {
                                        "type": "string",
                                        "oneOf": [
                                            {
                                                "const": "Free"
                                            },
                                            {
                                                "const": "Standard"
                                            }
                                        ]
                                    },
                                    "uat": {
                                        "type": "string",
                                        "oneOf": [
                                            {
                                                "const": "Free"
                                            },
                                            {
                                                "const": "Standard"
                                            }
                                        ]
                                    },
                                    "prd": {
                                        "type": "string",
                                        "oneOf": [
                                            {
                                                "const": "Free"
                                            },
                                            {
                                                "const": "Standard"
                                            }
                                        ]
                                    }
                                },
                                "required": [
                                    "dev",
                                    "qa",
                                    "uat",
                                    "prd"
                                ]
                            },
                            "tags": {
                                "oneOf": [
                                    {
                                        "type": "object",
                                        "patternProperties": {
                                            "^[a-z]": {
                                                "type": "string"
                                            }
                                        },
                                        "minProperties": 1
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            }
                        },
                        "required": [
                            "name",
                            "location",
                            "sku",
                            "tags"
                        ]
                    }
                }
            },
            "required": [
                "value"
            ]
        }
    }
}
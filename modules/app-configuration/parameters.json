{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "app-configuration": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "value": {
                    "$ref": "#/definitions/app-configuration-parameters"
                }
            },
            "required": [
                "value"
            ]
        },
        "app-configurations": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/app-configuration-parameters"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "app-configuration-parameters": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "appConfigurationName": {
                    "type": "string",
                    "description": "The name of the Azure App Configuration instance to be deployed."
                },
                "appConfigurationLocation": {
                    "type": "string"
                },
                "appConfigurationResourceGroup": {
                    "type": "string"
                },
                "appConfigurationEnableMsi": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enables Managed System Identity for connecting to the deployed instance of Azure App Configuration."
                },
                "appConfigurationDisableLocalAuth": {
                    "type": "boolean"
                },
                "appConfigurationNetworkSettings": {
                    "type": "object",
                    "additionalProperties": false,
                    "minProperties": 1,
                    "properties": {
                        "allowPublicNetworkAccess": {
                            "enum": [
                                "Enabled",
                                "Disabled"
                            ]
                        },
                        "allowAzureResourceAccess": {
                            "enum": [
                                "Enabled",
                                "Disabled"
                            ]
                        }
                    }
                },
                "appConfigurationKeys": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/app-configuration-key"
                    },
                    "minItems": 1,
                    "description": "Configuration Keys to deploy with the instance of Azure App Configuration."
                },
                "appConfigurationPrivateEndpoint": {
                    "$ref": "../private-endpoint/parameters.json#/definitions/private-endpoint-embedded"
                },
                "appConfigurationSku": {
                    "description": "Sku Requirement for private endpoint",
                    "default": {
                        "default": "Free"
                    },
                    "oneOf": [
                        {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "default": {
                                    "$ref": "#/definitions/app-configuration-sku"
                                }
                            },
                            "required": [
                                "default"
                            ]
                        },
                        {
                            "type": "object",
                            "additionalProperties": false,
                            "minProperties": 1,
                            "properties": {
                                "demo": {
                                    "$ref": "#/definitions/app-configuration-sku"
                                },
                                "stg": {
                                    "$ref": "#/definitions/app-configuration-sku"
                                },
                                "sbx": {
                                    "$ref": "#/definitions/app-configuration-sku"
                                },
                                "test": {
                                    "$ref": "#/definitions/app-configuration-sku"
                                },
                                "dev": {
                                    "$ref": "#/definitions/app-configuration-sku"
                                },
                                "qa": {
                                    "$ref": "#/definitions/app-configuration-sku"
                                },
                                "uat": {
                                    "$ref": "#/definitions/app-configuration-sku"
                                },
                                "prd": {
                                    "$ref": "#/definitions/app-configuration-sku"
                                }
                            }
                        }
                    ]
                },
                "appConfigurationTags": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-z]": {
                            "type": "string"
                        }
                    },
                    "minProperties": 1
                }
            },
            "required": [
                "appConfigurationName"
            ]
        },
        "app-configurations-keys": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "allOf": [
                            {
                                "$ref": "#/definitions/app-configuration-key"
                            },
                            {
                                "properties": {
                                    "appConfigurationName": {
                                        "type": "string",
                                        "description": "The name of the deployed Azure App Configuration instance."
                                    },
                                    "appConfigurationResourceGroup": {
                                        "type": "string",
                                        "description": "The name of the Azure Resource Group the Azure App Configuration instance belongs to."
                                    }
                                },
                                "required": [
                                    "appConfigurationName",
                                    "appConfigurationResourceGroup"
                                ]
                            }
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "app-configuration-key": {
            "type": "object",
            "properties": {
                "appConfigurationKey": {
                    "type": "string"
                },
                "appConfigurationValue": {
                    "oneOf": [
                        {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "default": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "default"
                            ]
                        },
                        {
                            "type": "object",
                            "additionalProperties": false,
                            "minProperties": 1,
                            "properties": {
                                "demo": {
                                    "type": "string"
                                },
                                "stg": {
                                    "type": "string"
                                },
                                "sbx": {
                                    "type": "string"
                                },
                                "test": {
                                    "type": "string"
                                },
                                "dev": {
                                    "type": "string"
                                },
                                "qa": {
                                    "type": "string"
                                },
                                "uat": {
                                    "type": "string"
                                },
                                "prd": {
                                    "type": "string"
                                }
                            }
                        }
                    ]
                },
                "appConfigurationLabels": {
                    "type": "array",
                    "description": "Adds a label to the config key for label select. Use key word 'default' to set the default as well.",
                    "items": {
                        "type": "string"
                    },
                    "uniqueItems": true,
                    "minItems": 1
                },
                "appConfigurationContentType": {
                    "oneOf": [
                        {
                            "type": "string",
                            "enum": [
                                "null",
                                "application/json",
                                "application/xml",
                                "application/vnd.microsoft.appconfig.keyvaultref+json;charset=utf-8",
                                "text/css",
                                "text/csv",
                                "text/html",
                                "text/plain",
                                "text/xml"
                            ]
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "appConfigurationKey",
                "appConfigurationValue",
                "appConfigurationContentType"
            ]
        },
        "app-configuration-sku": {
            "type": "string",
            "enum": [
                "Free",
                "Standard"
            ]
        }
    }
}
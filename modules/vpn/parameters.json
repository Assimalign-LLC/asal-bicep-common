{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "vpn-gateway": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "value": {
                    "$ref": "#/definitions/vpn-gateway-parameters"
                }
            },
            "required": [
                "value"
            ]
        },
        "vpn-gateways": {
            "additionalProperties": false,
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/vpn-gateway-parameters"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "vpn-gateway-parameters": {
            "additionalProperties": false,
            "properties": {
                "vpnGatewayName": {
                    "type": "string",
                    "description": "The name of the VPN Gateway"
                },
                "vpnGatewayResourceGroup": {
                    "type": "string"
                },
                "vpnGatewayLocation": {
                    "type": "string"
                },
                "vpnGatewayNetworkType": {
                    "type": "string",
                    "oneOf": [
                        {
                            "const": "RouteBased"
                        },
                        {
                            "const": "PolicyBased"
                        }
                    ]
                },
                "vpnGatewayIpAddresses": {
                    "type": "array",
                    "minItems": 3,
                    "maxItems": 3,
                    "items": {
                        "type": "object",
                        "properties": {
                            "ipAddressName": {
                                "type": "string"
                            },
                            "ipAddressResourceGroup": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "ipAddressName",
                            "ipAddressResourceGroup"
                        ]
                    }
                },
                "vpnGatewayVirtualNetworkName": {
                    "type": "string",
                    "description": "The name of the virtual network the VPN will live under. DO NOT include Resource Prefix in name."
                },
                "vpnGatewayClientSettings": {
                    "type": "object",
                    "description": "These settings are used to configure how a VPN Client will connect to the VPN Gateway. Also known as Point-to-site configurations.",
                    "properties": {
                        "authentication": {
                            "type": "string",
                            "oneOf": [
                                {
                                    "const": "AzureActiveDirectory"
                                },
                                {
                                    "const": "AzureCertificate"
                                },
                                {
                                    "const": "Radius"
                                }
                            ]
                        },
                        "addressPool": {
                            "type": "string",
                            "pattern": "(25[0-5]|2[0-4][0-9]|1[0-9][0-9]|^[0-9][0-9]|^[0-9])(\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)){3}(/[1-9]|/1[0-9]|/2[0-9]|/3[0-2])",
                            "minLength": 9,
                            "maxLength": 18
                        }
                    },
                    "if": {
                        "properties": {
                            "authentication": {
                                "const": "AzureActiveDirectory"
                            }
                        }
                    },
                    "then": {},
                    "required": [
                        "authentication",
                        "addressPool"
                    ]
                },
                "vpnGatewayTags": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-z]": {
                            "type": "string"
                        }
                    },
                    "minProperties": 1
                }
            },
            "if": {
                "properties": {
                    "vpnGatewayNetworkType": {
                        "const": "RouteBased"
                    }
                }
            },
            "then": {
                "properties": {
                    "vpnGatewaySku": {
                        "oneOf": [
                            {
                                "type": "object",
                                "additionalProperties": false,
                                "properties": {
                                    "default": {
                                        "$ref": "#/definitions/vpn-gateway-route-based-sku"
                                    }
                                },
                                "required": [
                                    "default"
                                ]
                            },
                            {
                                "type": "object",
                                "additionalProperties": false,
                                "minProperties": 1,
                                "properties": {
                                    "demo": {
                                        "$ref": "#/definitions/vpn-gateway-route-based-sku"
                                    },
                                    "stg": {
                                        "$ref": "#/definitions/vpn-gateway-route-based-sku"
                                    },
                                    "sbx": {
                                        "$ref": "#/definitions/vpn-gateway-route-based-sku"
                                    },
                                    "test": {
                                        "$ref": "#/definitions/vpn-gateway-route-based-sku"
                                    },
                                    "dev": {
                                        "$ref": "#/definitions/vpn-gateway-route-based-sku"
                                    },
                                    "qa": {
                                        "$ref": "#/definitions/vpn-gateway-route-based-sku"
                                    },
                                    "uat": {
                                        "$ref": "#/definitions/vpn-gateway-route-based-sku"
                                    },
                                    "prd": {
                                        "$ref": "#/definitions/vpn-gateway-route-based-sku"
                                    }
                                }
                            }
                        ]
                    }
                }
            },
            "else": {
                "properties": {
                    "vpnGatewaySku": {
                        "oneOf": [
                            {
                                "type": "object",
                                "additionalProperties": false,
                                "properties": {
                                    "default": {
                                        "$ref": "#/definitions/vpn-gateway-policy-based-sku"
                                    }
                                },
                                "required": [
                                    "default"
                                ]
                            },
                            {
                                "type": "object",
                                "additionalProperties": false,
                                "minProperties": 1,
                                "properties": {
                                    "demo": {
                                         "$ref": "#/definitions/vpn-gateway-policy-based-sku"
                                    },
                                    "stg": {
                                         "$ref": "#/definitions/vpn-gateway-policy-based-sku"
                                    },
                                    "sbx": {
                                         "$ref": "#/definitions/vpn-gateway-policy-based-sku"
                                    },
                                    "test": {
                                         "$ref": "#/definitions/vpn-gateway-policy-based-sku"
                                    },
                                    "dev": {
                                        "$ref": "#/definitions/vpn-gateway-policy-based-sku"
                                    },
                                    "qa": {
                                        "$ref": "#/definitions/vpn-gateway-policy-based-sku"
                                    },
                                    "uat": {
                                        "$ref": "#/definitions/vpn-gateway-policy-based-sku"
                                    },
                                    "prd": {
                                        "$ref": "#/definitions/vpn-gateway-policy-based-sku"
                                    }
                                }
                            }
                        ]
                    }
                }
            },
            "required": [
                "vpnGatewayName",
                "vpnGatewaySku",
                "vpnGatewayNetworkType",
                "vpnGatewayVirtualNetworkName"
            ]
        },
        "vpn-gateway-route-based-sku": {
            "enum": [
                "Basic",
                "VpnGw1",
                "VpnGw2",
                "VpnGw3",
                "VpnGw4",
                "VpnGw5"
            ]
        },
        "vpn-gateway-policy-based-sku": {
            "enum": [
                "Basic"
            ]
        }
    }
}
{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "notification-hub-namespace": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "value": {
                    "$ref": "#/definitions/notification-hub-namespace-parameters"
                }
            },
            "required": [
                "value"
            ]
        },
        "notification-hub-namespaces": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/notification-hub-namespace-parameters"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "notification-hub-namespace-parameters": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "notificationHubNamespaceName": {
                    "type": "string"
                },
                "notificationHubNamespaceResourceGroup": {
                    "type": "string"
                },
                "notificationHubNamespaceLocation": {
                    "type": "string"
                },
                "notificationHubNamespaceSku": {
                    "oneOf": [
                        {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "default": {
                                    "$ref": "#/definitions/notification-hub-namespace-sku"
                                }
                            },
                            "required": [
                                "default"
                            ]
                        },
                        {
                            "type": "object",
                            "additionalProperties": false,
                            "minProperties": 1,
                            "properties": {
                                "demo": {
                                    "$ref": "#/definitions/notification-hub-namespace-sku"
                                },
                                "stg": {
                                    "$ref": "#/definitions/notification-hub-namespace-sku"
                                },
                                "sbx": {
                                    "$ref": "#/definitions/notification-hub-namespace-sku"
                                },
                                "test": {
                                    "$ref": "#/definitions/notification-hub-namespace-sku"
                                },
                                "dev": {
                                    "$ref": "#/definitions/notification-hub-namespace-sku"
                                },
                                "qa": {
                                    "$ref": "#/definitions/notification-hub-namespace-sku"
                                },
                                "uat": {
                                    "$ref": "#/definitions/notification-hub-namespace-sku"
                                },
                                "prd": {
                                    "$ref": "#/definitions/notification-hub-namespace-sku"
                                }
                            }
                        }
                    ]
                    
                },
                "notificationHubNamespaceHubs": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/notification-hub-namespace-hub-parameters"
                    },
                    "minItems": 1
                },
                "notificationHubNamespacePolicies": {
                    "type": "array",
                    "items": {
                        "properties": {
                            "notificationHubPolicyName": {
                                "type": "string"
                            },
                            "notificationHubPolicyPermissions": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "enum": [
                                        "Listen",
                                        "Manage",
                                        "Send"
                                    ]
                                },
                                "minItems": 1
                            }
                        },
                        "required": [
                            "notificationHubPolicyName",
                            "notificationHubPolicyPermissions"
                        ]
                    },
                    "minItems": 1
                },
                "notificationHubNamespaceTags": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-z]": {
                            "type": "string"
                        }
                    },
                    "minProperties": 1
                }
            },
            "required": [
                "notificationHubNamespaceName"
            ]
        },
        "notification-hub-namespace-hubs": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "allOf": [
                            {
                                "$ref": "#/definitions/notification-hub-namespace-hub-parameters"
                            },
                            {
                                "type": "object",
                                "properties": {
                                    "notificationHubNamespaceName": {
                                        "type": "string",
                                        "description": "The name of the notification Namespace."
                                    },
                                    "notificationHubNamespaceResourceGroup": {
                                        "type": "string"
                                    },
                                    "notificationHubTags": {
                                        "type": "object",
                                        "patternProperties": {
                                            "^[a-z]": {
                                                "type": "string"
                                            }
                                        },
                                        "minProperties": 1
                                    }
                                },
                                "required": [
                                    "notificationHubNamespaceName"
                                ]
                            }
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "notification-hub-namespace-hub": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/notification-hub-namespace-hub-parameters"
                        },
                        {
                            "type": "object",
                            "properties": {
                                "notificationHubNamespaceName": {
                                    "type": "string",
                                    "description": "The name of the notification Namespace."
                                },
                                "notificationHubNamespaceResourceGroup": {
                                    "type": "string"
                                },
                                "notificationHubTags": {
                                    "type": "object",
                                    "patternProperties": {
                                        "^[a-z]": {
                                            "type": "string"
                                        }
                                    },
                                    "minProperties": 1
                                }
                            },
                            "required": [
                                "notificationHubNamespaceName"
                            ]
                        }
                    ]
                }
            },
            "required": [
                "value"
            ]
        },
        "notification-hub-namespace-hub-parameters": {
            "type": "object",
            "properties": {
                "notificationHubName": {
                    "type": "string",
                    "description": "The name of the Notification Namespace Hub"
                },
                "notificationHubLocation": {
                    "type": "string"
                }
            },
            "required": [
                "notificationHubName"
            ]
        },
        "notification-hub-namespace-sku": {
            "type": "string",
            "enum":[
                "Free",
                "Basic",
                "Standard"
            ]
        }
    }
}
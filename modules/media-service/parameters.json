{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "media-service": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "value": {
                    "$ref": "#/definitions/media-service-parameters"
                }
            },
            "required": [
                "value"
            ]
        },
        "media-services": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/media-service-parameters"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "media-service-parameters": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "mediaServiceName": {
                    "type":"string"
                },
                "mediaServiceResourceGroup": {
                    "type": "string"
                },
                "mediaServiceDisablePublicAccess": {
                    "type": "boolean"
                },
                "mediaServiceStorageAccount": {
                    "type": "object",
                    "properties": {
                        "mediaServiceStorageAccountName": {
                            "type": "string"
                        },
                        "mediaServiceStorageAccountResourceGroup": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "mediaServiceStorageAccountName"
                    ]
                },
                "mediaServiceTags": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-z]": {
                            "type": "string"
                        }
                    },
                    "minProperties": 1
                }
            },
            "required": [
                "mediaServiceName"
            ]
        }
    }
}
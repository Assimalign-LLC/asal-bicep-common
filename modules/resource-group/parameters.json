{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "resource-group": {
            "type": "object",
            "description": "The Resource Group in which all resource will be deployed under.",
            "additionalProperties": false,
            "properties": {
                "value": {
                    "$ref": "#/definitions/resource-group-parameters"
                }
            },
            "required": [
                "value"
            ]
        },
        "resource-groups": {
            "type": "object",
            "description": "The Resource Group in which all resource will be deployed under.",
            "additionalProperties": false,
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/resource-group-parameters"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "resource-group-parameters": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "resourceGroupName": {
                    "type": "string"
                },
                "resourceGroupLocation": {
                    "type": "string"
                },
                "resourceGroupTags": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-z]": {
                            "type": "string"
                        }
                    },
                    "minProperties": 1
                }
            },
            "required": [
                "resourceGroupName"
            ]
        }
    }
}
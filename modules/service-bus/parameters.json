{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "service-bus-namespace": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "value": {
                    "$ref": "#/definitions/service-bus-namespace-parameters"
                }
            },
            "required": [
                "value"
            ]
        },
        "service-bus-namespaces": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/service-bus-namespace-parameters"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "service-bus-namespace-parameters": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "serviceBusName": {
                    "type": "string"
                },
                "serviceBusResourceGroup": {
                    "type": "string"
                },
                "serviceBusLocation": {
                    "type": "string"
                },
                "serviceBusEnableMsi": {
                    "type": "boolean"
                },
                "serviceBusSku": {
                    "description": "Sku Requirement for private endpoint",
                    "default": {
                        "default": "Free"
                    },
                    "oneOf": [
                        {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "default": {
                                    "$ref": "#/definitions/service-bus-sku"
                                }
                            },
                            "required": [
                                "default"
                            ]
                        },
                        {
                            "type": "object",
                            "additionalProperties": false,
                            "minProperties": 1,
                            "properties": {
                                "demo": {
                                    "$ref": "#/definitions/service-bus-sku"
                                },
                                "stg": {
                                    "$ref": "#/definitions/service-bus-sku"
                                },
                                "sbx": {
                                    "$ref": "#/definitions/service-bus-sku"
                                },
                                "test": {
                                    "$ref": "#/definitions/service-bus-sku"
                                },
                                "dev": {
                                    "$ref": "#/definitions/service-bus-sku"
                                },
                                "qa": {
                                    "$ref": "#/definitions/service-bus-sku"
                                },
                                "uat": {
                                    "$ref": "#/definitions/service-bus-sku"
                                },
                                "prd": {
                                    "$ref": "#/definitions/service-bus-sku"
                                }
                            }
                        }
                    ]
          
                },
                "serviceBusQueues": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/service-bus-namespace-queue-parameters"
                    },
                    "minItems": 1
                },
                "serviceBusTopics": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/service-bus-namespace-topic-parameters"
                    },
                    "minItems": 1
                },
                "serviceBusPolicies": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/service-bus-policy"
                    },
                    "minItems": 1
                },
                "serviceBusTags": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-z]": {
                            "type": "string"
                        }
                    },
                    "minProperties": 1
                }
            },
            "required": [
                "serviceBusName",
                "serviceBusSku"
            ]
        },
        "service-bus-sku": {
            "enum": [
                "Basic",
                "Standard",
                "Premium"
            ]
        },
        "service-bus-namespace-queues": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "allOf": [
                            {
                                "$ref": "#/definitions/service-bus-namespace-queue-parameters"
                            },
                            {
                                "type": "object",
                                "properties": {
                                    "serviceBusName": {
                                        "type": "string",
                                        "description": "The name of the Azure Service Bus Namespace."
                                    },
                                    "serviceBusResourceGroup": {
                                        "type": "string",
                                        "description": "The name of the resource group the Azure Service Bus Belongs to."
                                    }
                                },
                                "required": [
                                    "serviceBusName"
                                ]
                            }
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "service-bus-namespace-queue": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/service-bus-namespace-queue-parameters"
                        },
                        {
                            "type": "object",
                            "properties": {
                                "serviceBusName": {
                                    "type": "string",
                                    "description": "The name of the Azure Service Bus Namespace."
                                },
                                "serviceBusResourceGroup": {
                                    "type": "string",
                                    "description": "The name of the resource group the Azure Service Bus Belongs to."
                                }
                            },
                            "required": [
                                "serviceBusName"
                            ]
                        }
                    ]
                }
            },
            "required": [
                "value"
            ]
        },
        "service-bus-namespace-queue-parameters": {
            "type": "object",
            "properties": {
                "serviceBusQueueName": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 260
                },
                "serviceBusQueueSettings": {
                    "$ref": "#/definitions/service-bus-namespace-common-settings"
                },
                "serviceBusQueuePolicies": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/service-bus-policy"
                    }
                }
            },
            "required": [
                "serviceBusQueueName"
            ]
        },
        "service-bus-namespace-topics": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "allOf": [
                            {
                                "$ref": "#/definitions/service-bus-namespace-topic-parameters"
                            },
                            {
                                "type": "object",
                                "properties": {
                                    "serviceBusName": {
                                        "type": "string"
                                    },
                                    "serviceBusResourceGroup": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "serviceBusName"
                                ]
                            }
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "service-bus-namespace-topic": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/service-bus-namespace-topic-parameters"
                        },
                        {
                            "type": "object",
                            "properties": {
                                "serviceBusName": {
                                    "type": "string"
                                },
                                "serviceBusResourceGroup": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "serviceBusName"
                            ]
                        }
                    ]
                }
            },
            "required": [
                "value"
            ]
        },
        "service-bus-namespace-topic-parameters": {
            "type": "object",
            "properties": {
                "serviceBusTopicName": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 260
                },
                "serviceBusTopicSettings": {
                    "type": "object",
                    "properties": {
                        "maxSize": {
                            "type": "number"
                        }
                    }
                },
                "serviceBusTopicSubscriptions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/service-bus-namespace-topic-subscription-parameters"
                    },
                    "minItems": 1
                },
                "serviceBusTopicPolicies": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/service-bus-policy"
                    }
                }
            },
            "required": [
                "serviceBusTopicName"
            ]
        },
        "service-bus-namespace-topic-subscriptions": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "allOf": [
                            {
                                "$ref": "#/definitions/service-bus-namespace-topic-subscription-parameters"
                            },
                            {
                                "type": "object",
                                "properties": {
                                    "serviceBusTopicName": {
                                        "type": "string"
                                    },
                                    "serviceBusName": {
                                        "type": "string"
                                    },
                                    "serviceBusResourceGroup": {
                                        "type": "string"
                                    },
                                    "serviceBusTopicSubscriptionSettings": {
                                        "$ref": "#/definitions/service-bus-namespace-common-settings"
                                    }
                                },
                                "required": [
                                    "serviceBusTopicName",
                                    "serviceBusName"
                                ]
                            }
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "service-bus-namespace-topic-subscription": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/service-bus-namespace-topic-subscription-parameters"
                        },
                        {
                            "type": "object",
                            "properties": {
                                "serviceBusTopicName": {
                                    "type": "string"
                                },
                                "serviceBusName": {
                                    "type": "string"
                                },
                                "serviceBusResourceGroup": {
                                    "type": "string"
                                },
                                "serviceBusTopicSubscriptionSettings": {
                                    "$ref": "#/definitions/service-bus-namespace-common-settings"
                                }
                            },
                            "required": [
                                "serviceBusTopicName",
                                "serviceBusName"
                            ]
                        }
                    ]
                }
            },
            "required": [
                "value"
            ]
        },
        "service-bus-namespace-topic-subscription-parameters": {
            "type": "object",
            "properties": {
                "serviceBusTopicSubscriptionName": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 50
                },
                "serviceBusTopicSubscriptionSettings": {
                    "$ref": "#/definitions/service-bus-namespace-common-settings"
                },
                "serviceBusTopicSubscriptionCorrelationFilters": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "filterGroupName": {
                                "type": "string",
                                "description": "A friendly readable name to categorize filters."
                            },
                            "filters": {
                                "$ref": "#/definitions/service-bus-namespace-topic-subscription-correlation-filter"
                            }
                        },
                        "required": [
                            "filterGroupName",
                            "filters"
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "serviceBusTopicSubscriptionName"
            ]
        },
        "service-bus-namespace-common-settings": {
            "type": "object",
            "properties": {
                "maxDelivery": {
                    "type": "number"
                },
                "enableSession": {
                    "type": "boolean"
                },
                "forwardTo": {
                    "type": "object",
                    "properties": {
                        "serviceBusName": {
                            "type": "string"
                        },
                        "serviceBusResourceGroup": {
                            "type": "string",
                            "description": "The name of the resource group the Azure Service Bus belongs to."
                        },
                        "serviceBusQueueName": {
                            "type": "string"
                        },
                        "serviceBusTopicName": {
                            "type": "string"
                        }
                    },
                    "oneOf": [
                        {
                            "required": [
                                "serviceBusQueueName"
                            ]
                        },
                        {
                            "required": [
                                "serviceBusTopicName"
                            ]
                        }
                    ],
                    "required": [
                        "maxDelivery"
                    ]
                }
            }
        },
        "service-bus-policy": {
            "type": "object",
            "properties": {
                "serviceBusPolicyName": {
                    "type": "string",
                    "description": "The name of the Service Bus (Namespace, Queue, or Topic) Policy for the Azure Service Bus Namespace."
                },
                "serviceBusPolicyPermissions": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "anyOf": [
                            {
                                "const": "Listen"
                            },
                            {
                                "const": "Manage"
                            },
                            {
                                "const": "Send"
                            }
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "serviceBusPolicyName",
                "serviceBusPolicyPermissions"
            ]
        },
        "service-bus-namespace-topic-subscription-correlation-filter": {
            "type": "object",
            "properties": {
                "label": {
                    "type": "string"
                },
                "correlationId": {
                    "type": "string"
                },
                "contentType": {
                    "type": "string"
                },
                "messageId": {
                    "type": "string"
                },
                "to": {
                    "type": "string"
                },
                "replayToSessionId": {
                    "type": "string"
                },
                "sessionId": {
                    "type": "string"
                }
            },
            "minProperties": 1
        }
    }
}
{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "virtual-network": {
            "type": "object",
            "description": "An array of Virtual Networks to be deployed",
            "additionalProperties": false,
            "properties": {
                "value": {
                    "$ref": "#/definitions/virtual-network-parameters"
                }
            },
            "required": [
                "value"
            ]
        },
        "virtual-networks": {
            "type": "object",
            "description": "An array of Virtual Networks to be deployed",
            "additionalProperties": false,
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/virtual-network-parameters"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "virtual-network-parameters": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "virtualNetworkName": {
                    "type": "string"
                },
                "virtualNetworkLocation": {
                    "type": "string"
                },
                "virtualNetworkResourceGroup": {
                    "type": "string"
                },
                "virtualNetworkAddressSpaces": {
                    "oneOf": [
                        {
                            "$ref": "#/definitions/virtual-network-address-space"
                        },
                        {
                            "type": "object",
                            "patternProperties": {
                                "^[a-z]": {
                                    "$ref": "#/definitions/virtual-network-address-space"
                                }
                            },
                            "minProperties": 1
                        }
                    ]
                },
                "virtualNetworkSubnets": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/virtual-network-subnet-parameters"
                    },
                    "minItems": 1
                },
                "virtualNetworkConfigs": {
                    "type": "object",
                    "properties": {
                        "enableDdosProtection": {
                            "type": "boolean"
                        },
                        "enableVmProtection": {
                            "type": "boolean"
                        }
                    }
                },
                "virtualNetworkTags": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-z]": {
                            "type": "string"
                        }
                    },
                    "minProperties": 1
                }
            },
            "required": [
                "virtualNetworkName",
                "virtualNetworkAddressSpaces"
            ]
        },
        "virtual-network-subnet": {
            "type": "object",
            "description": "An array of Virtual Networks to be deployed",
            "additionalProperties": false,
            "properties": {
                "value": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/virtual-network-subnet-parameters"
                        },
                        {
                            "properties": {
                                "virtualNetworkResourceGroup": {
                                    "type": "string"
                                }
                            }
                        }
                    ]
                }
            }
        },
        "virtual-network-subnets": {
            "type": "object",
            "description": "An array of Virtual Networks to be deployed",
            "additionalProperties": false,
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "allOf": [
                            {
                                "$ref": "#/definitions/virtual-network-subnet-parameters"
                            },
                            {
                                "properties": {
                                    "virtualNetworkResourceGroup": {
                                        "type": "string"
                                    }
                                }
                            }
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "virtual-network-subnet-parameters": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "virtualNetworkSubnetName": {
                    "type": "string",
                    "description": "The name of the Subnet to create within the virtual network."
                },
                "virtualNetworkSubnetRange": {
                    "oneOf": [
                        {
                            "$ref": "#/definitions/virtual-network-subnet-address-space"
                        },
                        {
                            "type": "object",
                            "patternProperties": {
                                "^[a-z]": {
                                    "$ref": "#/definitions/virtual-network-subnet-address-space"
                                }
                            },
                            "minProperties": 1
                        }
                    ]
                },
                "virtualNetworkSubnetConfigs": {
                    "type": "object",
                    "properties": {
                        "subnetDelegation": {
                            "type": "string",
                            "enum": [
                                "Microsoft.Web/hostingEnvironments",
                                "Microsoft.Orbital/orbitalGateways",
                                "Microsoft.AISupercomputer/accounts/jobs",
                                "Microsoft.AISupercomputer/accounts/models",
                                "Microsoft.AISupercomputer/accounts/npu",
                                "Microsoft.ApiManagement/service",
                                "Microsoft.Apollo/npu",
                                "Microsoft.AVS/PrivateClouds",
                                "Microsoft.AzureCosmosDB/clusters",
                                "Microsoft.BareMetal/AzureHostedService",
                                "Microsoft.BareMetal/AzureVMware",
                                "Microsoft.BareMetal/CrayServers",
                                "Microsoft.Batch/batchAccounts",
                                "Microsoft.CloudTest/hostedpools",
                                "Microsoft.CloudTest/images",
                                "Microsoft.CloudTest/pools",
                                "Microsoft.Codespaces/plans",
                                "Microsoft.ContainerInstance/containerGroups",
                                "Microsoft.ContainerService/managedClusters",
                                "Microsoft.Databricks/workspaces",
                                "Microsoft.DBforMySQL/flexibleServers",
                                "Microsoft.DBforMySQL/serversv2",
                                "Microsoft.DBforPostgreSQL/flexibleServers",
                                "Microsoft.DBforPostgreSQL/serversv2",
                                "Microsoft.DBforPostgreSQL/singleServers",
                                "Microsoft.DelegatedNetwork/controller",
                                "Microsoft.DevCenter/networkConnection",
                                "Microsoft.DocumentDB/cassandraClusters",
                                "Microsoft.Fidalgo/networkSettings",
                                "Microsoft.HardwareSecurityModules/dedicatedHSMs",
                                "Microsoft.Kusto/clusters",
                                "Microsoft.LabServices/labplans",
                                "Microsoft.Logic/integrationServiceEnvironments",
                                "Microsoft.MachineLearningServices/workspaces",
                                "Microsoft.Netapp/volumes",
                                "Microsoft.Network/dnsResolvers",
                                "Microsoft.PowerPlatform/enterprisePolicies",
                                "Microsoft.PowerPlatform/vnetaccesslinks",
                                "Microsoft.ServiceFabricMesh/networks",
                                "Microsoft.Singularity/accounts/jobs",
                                "Microsoft.Singularity/accounts/models",
                                "Microsoft.Singularity/accounts/npu",
                                "Microsoft.Sql/managedInstances",
                                "Microsoft.StoragePool/diskPools",
                                "Microsoft.StreamAnalytics/streamingJobs",
                                "Microsoft.Synapse/workspaces",
                                "Microsoft.Web/serverFarms",
                                "NGINX.NGINXPLUS/nginxDeployments",
                                "PaloAltoNetworks.Cloudngfw/firewalls"
                            ]
                        },
                        "subnetPrivateEndpointNetworkPolicies": {
                            "type": "string",
                            "enum": [
                                "Enabled",
                                "Disabled"
                            ]
                        },
                        "subnetServiceEndpoints": {
                            "type": "array",
                            "items": {
                                "properties": {
                                    "locations": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    "service": {
                                        "type": "string",
                                        "enum": [
                                            "Microsoft.AzureActiveDirectory",
                                            "Microsoft.AzureCosmosDB",
                                            "Microsoft.CognitiveServices",
                                            "Microsoft.ContainerRegistry",
                                            "Microsoft.EventHub",
                                            "Microsoft.KeyVault",
                                            "Microsoft.ServiceBus",
                                            "Microsoft.Sql",
                                            "Microsoft.Storage",
                                            "Microsoft.Web"
                                        ]
                                    }
                                },
                                "required": [
                                    "service"
                                ]
                            },
                            "minItems": 1
                        },
                        "subnetNetworkSecurityGroup": {
                            "type": "object",
                            "properties": {
                                "nsgName": {
                                    "type": "string"
                                },
                                "nsgResourceGroup": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "nsgName",
                                "nsgResourceGroup"
                            ]
                        },
                        "subnetNatGateway": {
                            "type": "object",
                            "properties": {
                                "natGatewayName": {
                                    "type": "string"
                                },
                                "natGatewayResourceGroup": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            },
            "required": [
                "virtualNetworkSubnetName",
                "virtualNetworkSubnetRange"
            ]
        },
        "virtual-network-peering": {
            "type": "object",
            "description": "An array of Virtual Networks to Peer to each other within the same Resource Group.",
            "additionalProperties": false,
            "properties": {
                "value": {
                    "$ref": "#/definitions/virtual-network-peering-parameters"
                }
            },
            "required": [
                "value"
            ]
        },
        "virtual-network-peerings": {
            "type": "object",
            "description": "An array of Virtual Networks to Peer to each other within the same Resource Group.",
            "additionalProperties": false,
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/virtual-network-peering-parameters"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "virtual-network-peering-parameters": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "peeringLinkName": {
                    "type": "string"
                },
                "peeringVirtualNetwork": {
                    "type": "string"
                },
                "peeringVirtualNetworkResourceGroup": {
                    "type": "string"
                },
                "remoteLinkName": {
                    "type": "string"
                },
                "remoteVirtualNetwork": {
                    "type": "string"
                },
                "remoteVirtualNetworkResourceGroup": {
                    "type": "string"
                }
            },
            "required": [
                "peeringLinkName",
                "peeringVirtualNetwork",
                "remoteLinkName",
                "remoteVirtualNetwork"
            ]
        },
        "virtual-network-address-space": {
            "oneOf": [
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "default": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/ip-address"
                            },
                            "minItems": 1
                        }
                    },
                    "required": [
                        "default"
                    ]
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "minProperties": 1,
                    "properties": {
                        "demo": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/ip-address"
                            },
                            "minItems": 1
                        },
                        "stg": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/ip-address"
                            },
                            "minItems": 1
                        },
                        "sbx": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/ip-address"
                            },
                            "minItems": 1
                        },
                        "test": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/ip-address"
                            },
                            "minItems": 1
                        },
                        "dev": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/ip-address"
                            },
                            "minItems": 1
                        },
                        "qa": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/ip-address"
                            },
                            "minItems": 1
                        },
                        "uat": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/ip-address"
                            },
                            "minItems": 1
                        },
                        "prd": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/ip-address"
                            },
                            "minItems": 1
                        }
                    }
                }
            ]
        },
        "virtual-network-subnet-address-space": {
            "oneOf": [
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "default": {
                            "$ref": "#/definitions/ip-address"
                        }
                    },
                    "required": [
                        "default"
                    ]
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "minProperties": 1,
                    "properties": {
                        "demo": {
                            "$ref": "#/definitions/ip-address"
                        },
                        "stg": {
                            "$ref": "#/definitions/ip-address"
                        },
                        "sbx": {
                            "$ref": "#/definitions/ip-address"
                        },
                        "test": {
                            "$ref": "#/definitions/ip-address"
                        },
                        "dev": {
                            "$ref": "#/definitions/ip-address"
                        },
                        "qa": {
                            "$ref": "#/definitions/ip-address"
                        },
                        "uat": {
                            "$ref": "#/definitions/ip-address"
                        },
                        "prd": {
                            "$ref": "#/definitions/ip-address"
                        }
                    }
                }
            ]
        },
        "ip-address": {
            "type": "string",
            "pattern": "(25[0-5]|2[0-4][0-9]|1[0-9][0-9]|^[0-9][0-9]|^[0-9])(\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)){3}(/[1-9]|/1[0-9]|/2[0-9]|/3[0-2])",
            "minLength": 9,
            "maxLength": 18
        }
    }
}
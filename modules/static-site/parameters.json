{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "static-site": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "value": {
                    "$ref": "#/definitions/static-site-parameters"
                }
            },
            "required": [
                "value"
            ]
        },
        "static-sites": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/static-site-parameters"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "value"
            ]
        },
        "static-site-parameters": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "staticSiteName": {
                    "type": "string"
                },
                "staticSiteResourceGroup": {
                    "type": "string"
                },
                "staticSiteLocation": {
                    "type": "string",
                    "oneOf": [
                        {
                            "const": "centralus"
                        },
                        {
                            "const": "eastus2"
                        },
                        {
                            "const": "westus2"
                        },
                        {
                            "const": "eastasia"
                        },
                        {
                            "const": "westeurope"
                        }
                    ]
                },
                "staticSiteSku": {
                    "oneOf": [
                        {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "default": {
                                    "$ref": "#/definitions/static-site-sku"
                                }
                            },
                            "required": [
                                "default"
                            ]
                        },
                        {
                            "type": "object",
                            "additionalProperties": false,
                            "minProperties": 1,
                            "properties": {
                                "demo": {
                                     "$ref": "#/definitions/static-site-sku"
                                },
                                "stg": {
                                     "$ref": "#/definitions/static-site-sku"
                                },
                                "sbx": {
                                     "$ref": "#/definitions/static-site-sku"
                                },
                                "test": {
                                     "$ref": "#/definitions/static-site-sku"
                                },
                                "dev": {
                                    "$ref": "#/definitions/static-site-sku"
                                },
                                "qa": {
                                    "$ref": "#/definitions/static-site-sku"
                                },
                                "uat": {
                                    "$ref": "#/definitions/static-site-sku"
                                },
                                "prd": {
                                    "$ref": "#/definitions/static-site-sku"
                                },
                                "default": {
                                    "$ref": "#/definitions/static-site-sku"
                                }
                            }
                        }
                    ]
                },
                "staticSiteTags": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-z]": {
                            "type": "string"
                        }
                    },
                    "minProperties": 1
                }
            },
            "required": [
                "staticSiteName"
            ]
        },
        "static-site-sku": {
            "enum": [
                "Free",
                "Standard"
            ]
        }
    }
}